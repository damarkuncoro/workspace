<%= form_with(model: [:protected, account], local: true) do |form| %>
  <% if account.errors.any? %>
    <div class="bg-destructive/10 border border-destructive text-destructive px-4 py-3 rounded-lg">
      <div class="flex gap-3">
        <div class="flex-shrink-0">
          <i class="ki-filled ki-information text-destructive text-lg"></i>
        </div>
        <div>
          <h3 class="text-sm font-medium text-destructive">
            <%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:
          </h3>
          <div class="mt-2 text-sm text-destructive">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% account.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Account Information Section -->
  <div class="grid gap-6">
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Account Information</h3>
      </div>
      <div class="kt-card-content">
        <div class="grid gap-4">
          <div>
            <%= form.label :email, class: 'form-label' %>
            <%= form.email_field :email,
                class: 'kt-input',
                placeholder: 'Enter email address',
                required: true %>
            <p class="mt-1 text-sm text-secondary-foreground">This will be used for login and notifications</p>
          </div>

          <% if account.new_record? %>
            <div>
              <%= form.label :password, class: 'form-label' %>
              <%= form.password_field :password,
                  class: 'kt-input',
                  placeholder: 'Enter password',
                  required: true %>
              <p class="mt-1 text-sm text-secondary-foreground">Minimum 6 characters required</p>
            </div>

            <div>
              <%= form.label :password_confirmation, class: 'form-label' %>
              <%= form.password_field :password_confirmation,
                  class: 'kt-input',
                  placeholder: 'Confirm password',
                  required: true %>
              <p class="mt-1 text-sm text-secondary-foreground">Must match the password above</p>
            </div>
          <% else %>
            <div>
              <%= form.label :password, class: 'form-label' %>
              <%= form.password_field :password,
                  class: 'kt-input',
                  placeholder: 'Leave blank to keep current password' %>
              <p class="mt-1 text-sm text-secondary-foreground">Only fill if you want to change the password</p>
            </div>

            <div>
              <%= form.label :password_confirmation, class: 'form-label' %>
              <%= form.password_field :password_confirmation,
                  class: 'kt-input',
                  placeholder: 'Confirm new password' %>
              <p class="mt-1 text-sm text-secondary-foreground">Required only if changing password</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Personal Information Section -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Personal Information</h3>
      </div>
      <div class="kt-card-content">
        <%= form.fields_for :person do |person_form| %>
          <div class="grid gap-4">
            <div>
              <%= person_form.label :name, class: 'form-label' %>
              <%= person_form.text_field :name,
                  class: 'kt-input',
                  placeholder: 'Enter full name' %>
              <p class="mt-1 text-sm text-secondary-foreground">Your display name in the system</p>
            </div>

            <div>
              <%= person_form.label :date_of_birth, class: 'form-label' %>
              <%= person_form.date_field :date_of_birth,
                  class: 'kt-input' %>
              <p class="mt-1 text-sm text-secondary-foreground">Format: YYYY-MM-DD</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Roles & Permissions Section -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Roles & Permissions</h3>
      </div>
      <div class="kt-card-content">
        <div>
          <%= form.label :role_ids, 'Assign Roles', class: 'form-label mb-3' %>
          <div class="grid gap-3">
            <% Role.all.each do |role| %>
              <div class="flex items-start gap-3">
                <div class="flex items-center h-5">
                  <%= check_box_tag "account[role_ids][]",
                      role.id,
                      account.roles.include?(role),
                      class: 'kt-checkbox' %>
                </div>
                <div class="text-sm">
                  <label class="font-medium text-foreground"><%= role.name.titleize %></label>
                  <p class="text-secondary-foreground"><%= role.description.presence || 'No description available' %></p>
                </div>
              </div>
            <% end %>
          </div>
          <p class="mt-3 text-sm text-secondary-foreground">Select the roles this account should have. Changes take effect immediately.</p>
        </div>
      </div>
    </div>

  <!-- Form Actions -->
  <div class="flex justify-end gap-3">
    <%= link_to protected_accounts_path, class: "kt-btn kt-btn-outline" do %>
      <i class="ki-filled ki-cross"></i>
      Cancel
    <% end %>

    <%= form.submit (account.new_record? ? 'Create Account' : 'Update Account'),
        class: "kt-btn kt-btn-primary",
        data: { disable_with: account.new_record? ? "Creating..." : "Updating..." } %>
  </div>
<% end %>