

<%= render 'protected/shared/partials/page_header',
  title: 'Account Details',
  subtitle: @account.email %>

<%= kt_grid(cols: 1) do %>
  <%= kt_column(span: 1) do %>
    <%= render 'protected/accounts/partials/account_info' %>
  <% end %>

  <%= kt_column(span: 1) do %>
    <%= render 'protected/shared/partials/page_actions',
      card: true,
      title: 'Quick Actions',
      justify: 'justify-start',
      gap_class: 'gap-3',
      links: [
        link_to('Edit', edit_protected_account_path(@account), class: 'kt-btn kt-btn-warning'),
        link_to('Back to Accounts', protected_accounts_path, class: 'kt-btn kt-btn-outline'),
        link_to('Back to Dashboard', protected_dashboard_path, class: 'kt-btn kt-btn-outline')
      ] %>
  <% end %>
<% end %>

<%# Baris 2: Customer Information (full width) %>
<%= kt_grid(cols: 1) do %>
  <%= kt_column(span: 1) do %>
    <%= render 'protected/accounts/partials/customer_section' %>
  <% end %>
<% end %>

<%# Baris 3: Employee Information (full width) %>
<%= kt_grid(cols: 1) do %>
  <%= kt_column(span: 1) do %>
    <%= render 'protected/accounts/partials/employee_section' %>
  <% end %>
<% end %>