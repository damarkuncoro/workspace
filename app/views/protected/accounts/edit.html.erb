<%= render 'protected/shared/partials/page_header',
  title: 'Edit Account',
  subtitle: 'Update account information and permissions' %>
<%= render 'protected/accounts/partials/edit_form' %>
<%= render 'protected/shared/partials/page_actions',
  card: false,
  justify: 'justify-center',
  links: [
    link_to(protected_account_path(@account), class: "kt-btn kt-btn-outline") do
      raw('<i class="ki-filled ki-eye"></i> View Account')
    end,
    link_to(protected_accounts_path, class: "kt-btn kt-btn-outline") do
      raw('<i class="ki-filled ki-arrow-left"></i> Back to Accounts')
    end
  ] %>
