<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
    <div class="flex flex-col justify-center gap-2">
      <h1 class="text-xl font-medium leading-none text-mono">
        Accounts
      </h1>
      <div class="flex items-center gap-2 text-sm font-normal text-secondary-foreground">
        Manage user accounts and permissions
      </div>
    </div>
    <div class="flex items-center gap-2.5">
      <%= link_to new_protected_account_path, class: "kt-btn kt-btn-primary" do %>
        <i class="ki-filled ki-plus"></i>
        New Account
      <% end %>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="kt-card">
    <div class="kt-card-content">
      <% if @accounts.any? %>
        <div class="kt-scrollable-x-auto">
          <table class="kt-table kt-table-border">
            <thead>
              <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Roles</th>
                <th>Created At</th>
                <th class="w-[200px]">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @accounts.each do |account| %>
                <tr>
                  <td>
                    <div class="text-sm font-medium text-mono">
                      <%= account.email %>
                    </div>
                  </td>
                  <td>
                    <div class="text-sm text-foreground">
                      <%= account.person&.name || 'Not provided' %>
                    </div>
                  </td>
                  <td>
                    <div class="flex flex-wrap gap-1">
                      <% account.roles.each do |role| %>
                        <span class="kt-badge kt-badge-secondary"><%= role.name %></span>
                      <% end %>
                    </div>
                  </td>
                  <td>
                    <div class="text-sm text-secondary-foreground">
                      <%= l(account.created_at) %>
                    </div>
                  </td>
                  <td>
                    <div class="flex gap-2">
                      <%= link_to protected_account_path(account), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                        <i class="ki-filled ki-eye"></i>
                      <% end %>
                      <%= link_to edit_protected_account_path(account), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                        <i class="ki-filled ki-pencil"></i>
                      <% end %>
                      <%= link_to protected_account_path(account), method: :delete, data: { confirm: 'Are you sure?' }, class: "kt-btn kt-btn-sm kt-btn-destructive" do %>
                        <i class="ki-filled ki-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="flex flex-col items-center gap-4">
            <i class="ki-filled ki-users text-4xl text-muted-foreground"></i>
            <h3 class="text-lg font-medium text-foreground">No accounts found</h3>
            <p class="text-sm text-secondary-foreground">Get started by creating your first account.</p>
            <%= link_to new_protected_account_path, class: "kt-btn kt-btn-primary" do %>
              <i class="ki-filled ki-plus"></i>
              New Account
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="kt-card-footer justify-start">
      <%= link_to protected_dashboard_path, class: "kt-btn kt-btn-outline" do %>
        <i class="ki-filled ki-arrow-left"></i>
        Back to Dashboard
      <% end %>
    </div>
  </div>
</div>
<!-- End of Container -->