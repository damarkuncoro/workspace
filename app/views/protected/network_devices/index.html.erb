<!-- Container -->
<div class="kt-container-fixed">
  <div class="grid gap-5 lg:gap-7.5">
    <!-- Filters Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Filters</h3>
      </div>
      <div class="kt-card-content">
        <%= form_with url: protected_network_devices_path, method: :get, class: "grid grid-cols-1 md:grid-cols-5 gap-4" do |f| %>
          <div>
            <%= f.label :network_id, "Network", class: "form-label" %>
            <%= f.select :network_id, options_for_select(@networks.map { |n| [n.name, n.id] }, params[:network_id]), { include_blank: "All Networks" }, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :device_id, "Device", class: "form-label" %>
            <%= f.select :device_id, options_for_select(@devices.map { |d| [d.label, d.id] }, params[:device_id]), { include_blank: "All Devices" }, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :status, "Status", class: "form-label" %>
            <%= f.select :status, options_for_select([["All Statuses", ""], ["Connected", "connected"], ["Disconnected", "disconnected"]], params[:status]), {}, class: "kt-select" %>
          </div>
          <div class="flex items-end gap-2">
            <%= f.submit "Apply Filters", class: "kt-btn kt-btn-primary" %>
            <%= link_to "Clear", protected_network_devices_path, class: "kt-btn kt-btn-outline" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Network Devices List Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Network Device Connections (<%= @network_devices.count %>)</h3>
      </div>
      <div class="kt-card-content">
        <% if @network_devices.any? %>
          <div class="kt-scrollable-x-auto">
            <table class="kt-table kt-table-border">
              <thead>
                <tr>
                  <th>Network</th>
                  <th>Device</th>
                  <th>Interface</th>
                  <th>IP Address</th>
                  <th>Status</th>
                  <th>Connected At</th>
                  <th class="w-[100px]">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @network_devices.each do |network_device| %>
                  <tr>
                    <td>
                      <div class="text-sm font-medium text-mono">
                        <%= network_device.network.name %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= network_device.network.kind.titleize %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm font-medium text-mono">
                        <%= network_device.device.label %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= network_device.device.serial_number %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm text-foreground">
                        <%= network_device.device_interface&.name || 'N/A' %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= network_device.device_interface&.mac || '' %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm text-mono">
                        <%= network_device.ip_address || 'N/A' %>
                      </div>
                    </td>
                    <td>
                      <% if network_device.connected? %>
                        <span class="kt-badge kt-badge-success">Connected</span>
                      <% else %>
                        <span class="kt-badge kt-badge-destructive">Disconnected</span>
                      <% end %>
                    </td>
                    <td>
                      <div class="text-sm text-foreground">
                        <%= network_device.connected_at&.strftime('%B %d, %Y') || 'N/A' %>
                      </div>
                    </td>
                    <td>
                      <div class="flex gap-2">
                        <%= link_to protected_network_device_path(network_device), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                          <i class="ki-filled ki-eye"></i>
                        <% end %>
                        <%= link_to edit_protected_network_device_path(network_device), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                          <i class="ki-filled ki-pencil"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="kt-card-footer justify-center">
            <%= pagy_nav(@pagy) %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="flex flex-col items-center gap-4">
              <i class="ki-filled ki-devices text-4xl text-muted-foreground"></i>
              <h3 class="text-lg font-medium text-foreground">No network device connections</h3>
              <p class="text-sm text-secondary-foreground">Get started by connecting devices to networks.</p>
              <%= link_to new_protected_network_device_path, class: "kt-btn kt-btn-primary" do %>
                <i class="ki-filled ki-plus"></i>
                Add Connection
              <% end %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>