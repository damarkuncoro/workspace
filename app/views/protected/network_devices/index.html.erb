<div class="max-w-7xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Network Devices</h1>
          <p class="text-purple-100 mt-1">Manage device connections to networks</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to new_protected_network_device_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-white bg-opacity-20 hover:bg-opacity-30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Connection
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Filters</h3>
    </div>
    <div class="px-6 py-4">
      <%= form_with url: protected_network_devices_path, method: :get, class: "grid grid-cols-1 md:grid-cols-5 gap-4" do |f| %>
        <div>
          <%= f.label :network_id, "Network", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :network_id, options_for_select(@networks.map { |n| [n.name, n.id] }, params[:network_id]), { include_blank: "All Networks" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :device_id, "Device", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :device_id, options_for_select(@devices.map { |d| [d.label, d.id] }, params[:device_id]), { include_blank: "All Devices" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :status, options_for_select([["All Statuses", ""], ["Connected", "connected"], ["Disconnected", "disconnected"]], params[:status]), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div class="flex items-end">
          <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= link_to "Clear", protected_network_devices_path, class: "ml-2 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Network Devices List -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Network Device Connections (<%= @network_devices.count %>)</h3>
    </div>
    <div class="px-6 py-4">
      <% if @network_devices.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Network
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Device
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Interface
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  IP Address
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Connected At
                </th>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @network_devices.each do |network_device| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= network_device.network.name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= network_device.network.kind.titleize %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= network_device.device.label %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= network_device.device.serial_number %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= network_device.device_interface&.name || 'N/A' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= network_device.device_interface&.mac || '' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900 font-mono">
                      <%= network_device.ip_address || 'N/A' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if network_device.connected? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Connected
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Disconnected
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= network_device.connected_at&.strftime('%B %d, %Y') || 'N/A' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to protected_network_device_path(network_device), class: "text-indigo-600 hover:text-indigo-900 mr-4" do %>
                      View
                    <% end %>
                    <%= link_to edit_protected_network_device_path(network_device), class: "text-indigo-600 hover:text-indigo-900" do %>
                      Edit
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-6">
          <%= pagy_nav(@pagy) %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No network device connections</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by connecting devices to networks.</p>
          <div class="mt-6">
            <%= link_to new_protected_network_device_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Add Connection
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>