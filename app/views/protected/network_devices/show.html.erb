<div class="max-w-4xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Network Device Connection</h1>
          <p class="text-purple-100 mt-1"><%= @network_device.device.label %> â†” <%= @network_device.network.name %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_protected_network_device_path(@network_device), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-white bg-opacity-20 hover:bg-opacity-30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Connection
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Connection Information -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Basic Information -->
    <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Connection Details
        </h3>
      </div>
      <div class="px-6 py-5 space-y-4">
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Network</span>
          <span class="text-sm font-semibold text-gray-900 bg-purple-50 px-3 py-1 rounded-lg"><%= @network_device.network.name %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Device</span>
          <span class="text-sm font-semibold text-gray-900 bg-purple-50 px-3 py-1 rounded-lg"><%= @network_device.device.label %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Interface</span>
          <span class="text-sm text-gray-900"><%= @network_device.device_interface&.name || 'N/A' %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">IP Address</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-3 py-1 rounded-lg border"><%= @network_device.ip_address || 'N/A' %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Status</span>
          <% if @network_device.connected? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Connected
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              Disconnected
            </span>
          <% end %>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Connected At</span>
          <span class="text-sm text-gray-900"><%= @network_device.connected_at&.strftime('%B %d, %Y %H:%M') || 'N/A' %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Disconnected At</span>
          <span class="text-sm text-gray-900"><%= @network_device.disconnected_at&.strftime('%B %d, %Y %H:%M') || 'N/A' %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Created</span>
          <span class="text-sm text-gray-900"><%= @network_device.created_at.strftime('%B %d, %Y') %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Last Updated</span>
          <span class="text-sm text-gray-900"><%= @network_device.updated_at.strftime('%B %d, %Y') %></span>
        </div>
      </div>
    </div>

    <!-- Network & Device Info -->
    <div class="space-y-6">
      <!-- Network Info -->
      <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0 9c-1.657 0-3-4.03-3-9s1.343-9 3-9m0 18c1.657 0 3-4.03 3-9s-1.343-9-3-9"></path>
            </svg>
            Network Information
          </h3>
        </div>
        <div class="px-6 py-5 space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-600">Type</span>
            <span class="text-sm text-gray-900"><%= @network_device.network.kind.titleize %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-600">CIDR</span>
            <span class="text-sm text-gray-900 font-mono"><%= @network_device.network.cidr || 'N/A' %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-600">Location</span>
            <span class="text-sm text-gray-900"><%= @network_device.network.location || 'N/A' %></span>
          </div>
        </div>
      </div>

      <!-- Device Info -->
      <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-green-50 to-green-100 px-6 py-5 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
            </svg>
            Device Information
          </h3>
        </div>
        <div class="px-6 py-5 space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-600">Serial Number</span>
            <span class="text-sm text-gray-900 font-mono"><%= @network_device.device.serial_number %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-600">Type</span>
            <span class="text-sm text-gray-900"><%= @network_device.device.device_type.name %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm font-medium text-gray-600">Status</span>
            <span class="text-sm text-gray-900"><%= @network_device.device.status.titleize %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activities -->
  <div class="bg-white shadow-xl rounded-xl overflow-hidden mb-6 border border-gray-100">
    <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Recent Activities
      </h3>
    </div>
    <div class="px-6 py-4">
      <% if @network_activities.any? %>
        <div class="space-y-4">
          <% @network_activities.each do |activity| %>
            <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-lg">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <% case activity.event_type %>
                  <% when 'link_up' %>
                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                  <% when 'link_down' %>
                    <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= activity.event_type.titleize %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= activity.recorded_at.strftime('%B %d, %Y %H:%M') %>
                  </div>
                </div>
              </div>
              <div class="text-sm text-gray-500">
                <%= link_to protected_network_activity_path(activity), class: "text-indigo-600 hover:text-indigo-900" do %>
                  View Details
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No recent activities</h3>
          <p class="mt-1 text-sm text-gray-500">No network activities have been recorded for this connection yet.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-center space-x-4">
    <%= link_to protected_network_devices_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Connections
    <% end %>

    <%= button_to protected_network_device_path(@network_device), method: :delete, data: { confirm: 'Are you sure you want to delete this network device connection?' }, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
      Delete Connection
    <% end %>
  </div>
</div>