<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
    <div class="flex flex-col justify-center gap-2">
      <h1 class="text-xl font-medium leading-none text-mono">
        Add New Network Device Connection
      </h1>
      <div class="flex items-center gap-2 text-sm font-normal text-secondary-foreground">
        Connect a device to a network
      </div>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="kt-card">
    <%= form_with model: @network_device, url: protected_network_devices_path do |f| %>
      <div class="kt-card-content">
        <div class="grid gap-6">
          <!-- Network Selection -->
          <div>
            <%= f.label :network_id, "Network", class: "form-label" %>
            <%= f.select :network_id, options_for_select(@networks.map { |n| ["#{n.name} (#{n.kind.titleize})", n.id] }), { include_blank: "Select a network" }, { required: true, class: "kt-select" } %>
            <% if @network_device.errors[:network_id].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_device.errors[:network_id].first %></p>
            <% end %>
          </div>

          <!-- Device Selection -->
          <div>
            <%= f.label :device_id, "Device", class: "form-label" %>
            <%= f.select :device_id, options_for_select(@devices.map { |d| ["#{d.label} (#{d.serial_number})", d.id] }), { include_blank: "Select a device" }, { required: true, class: "kt-select" } %>
            <% if @network_device.errors[:device_id].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_device.errors[:device_id].first %></p>
            <% end %>
          </div>

          <!-- Device Interface Selection -->
          <div>
            <%= f.label :device_interface_id, "Device Interface (Optional)", class: "form-label" %>
            <%= f.select :device_interface_id, options_for_select([]), { include_blank: "Select interface (optional)" }, { class: "kt-select", id: "device_interface_select" } %>
            <p class="mt-2 text-sm text-secondary-foreground">Leave blank if no specific interface is needed</p>
            <% if @network_device.errors[:device_interface_id].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_device.errors[:device_interface_id].first %></p>
            <% end %>
          </div>

          <!-- IP Address -->
          <div>
            <%= f.label :ip_address, "IP Address", class: "form-label" %>
            <%= f.text_field :ip_address, class: "kt-input", placeholder: "e.g., 192.168.1.100" %>
            <p class="mt-2 text-sm text-secondary-foreground">Optional IP address assignment</p>
            <% if @network_device.errors[:ip_address].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_device.errors[:ip_address].first %></p>
            <% end %>
          </div>

          <!-- Status -->
          <div>
            <%= f.label :status, "Connection Status", class: "form-label" %>
            <%= f.select :status, options_for_select([["Connected", "connected"], ["Disconnected", "disconnected"]]), { include_blank: "Select status" }, { required: true, class: "kt-select" } %>
            <% if @network_device.errors[:status].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_device.errors[:status].first %></p>
            <% end %>
          </div>

          <!-- Metadata -->
          <div>
            <%= f.label :metadata, class: "form-label" %>
            <%= f.text_area :metadata, rows: 4, class: "kt-input", placeholder: '{"bandwidth": "100Mbps", "priority": "high"}' %>
            <p class="mt-2 text-sm text-secondary-foreground">Optional JSON metadata for additional configuration</p>
            <% if @network_device.errors[:metadata].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_device.errors[:metadata].first %></p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="kt-card-footer justify-end gap-3">
        <%= link_to protected_network_devices_path, class: "kt-btn kt-btn-outline" do %>
          <i class="ki-filled ki-cross"></i>
          Cancel
        <% end %>
        <%= f.submit "Create Connection", class: "kt-btn kt-btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<!-- End of Container -->

<script>
document.addEventListener('DOMContentLoaded', function() {
  const deviceSelect = document.querySelector('#network_device_device_id');
  const interfaceSelect = document.querySelector('#device_interface_select');

  if (deviceSelect && interfaceSelect) {
    deviceSelect.addEventListener('change', function() {
      const deviceId = this.value;
      if (deviceId) {
        // Fetch interfaces for the selected device
        fetch(`/protected/devices/${deviceId}/interfaces.json`)
          .then(response => response.json())
          .then(interfaces => {
            interfaceSelect.innerHTML = '<option value="">Select interface (optional)</option>';
            interfaces.forEach(interface => {
              const option = document.createElement('option');
              option.value = interface.id;
              option.textContent = `${interface.name} (${interface.mac})`;
              interfaceSelect.appendChild(option);
            });
          })
          .catch(error => console.error('Error fetching interfaces:', error));
      } else {
        interfaceSelect.innerHTML = '<option value="">Select interface (optional)</option>';
      }
    });
  }
});
</script>