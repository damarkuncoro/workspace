<%= kt_card(height: "h-full") do %>
      <%= kt_card_header(class_name: "bg-gradient-to-r from-blue-50 to-indigo-50", border: true) do %>
        <%= kt_flex(justify: :between, class_name: "p-4 lg:p-6") do %>
          <%= kt_flex(direction: :col) do %>
            <h3 class="text-xl font-bold text-gray-900">Recent Activity</h3>
            <p class="text-sm text-gray-600 mt-1">Latest system events and updates</p>
          <% end %>
          <%= kt_flex(gap: 2, align: :center) do %>
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-600">Live</span>
          <% end %>
        <% end %>
      <% end %>
      <%= kt_card_content(padding: "p-0") do %>
        <div class="divide-y divide-gray-100">
          <% if @recent_customers.any? %>
            <% @recent_customers.each do |customer| %>
              <div class="p-4 lg:p-6 hover:bg-gray-50 transition-colors">
                <%= kt_flex(gap: 4) do %>
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900">
                      New customer <span class="font-semibold text-green-600"><%= customer.person_name %></span> registered
                    </p>
                    <p class="text-xs text-gray-500 mt-1"><%= customer.created_at.strftime('%B %d, %Y at %H:%M') %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>

          <% if @current_rentals.any? %>
            <% @current_rentals.first(3).each do |rental| %>
              <div class="p-4 lg:p-6 hover:bg-gray-50 transition-colors">
                <%= kt_flex(gap: 4) do %>
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900">
                      Device <span class="font-semibold text-blue-600"><%= rental.device.label %></span> rented to <%= rental.customer.person_name %>
                    </p>
                    <p class="text-xs text-gray-500 mt-1"><%= rental.created_at.strftime('%B %d, %Y at %H:%M') %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>

          <% if @recent_issues.any? %>
            <% @recent_issues.first(2).each do |issue| %>
              <div class="p-4 lg:p-6 hover:bg-gray-50 transition-colors">
                <%= kt_flex(gap: 4) do %>
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900">
                      New issue: <span class="font-semibold text-yellow-600"><%= issue.title.truncate(40) %></span>
                    </p>
                    <p class="text-xs text-gray-500 mt-1"><%= issue.created_at.strftime('%B %d, %Y at %H:%M') %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>

          <% if @recent_customers.empty? && @current_rentals.empty? && @recent_issues.empty? %>
            <div class="p-4 lg:p-6 text-center">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h4 class="text-lg font-medium text-gray-900 mb-2">Welcome to Support Cakra!</h4>
              <p class="text-gray-600 mb-4">Your account is ready and the dashboard is fully activated.</p>
              <%= kt_flex(justify: :center, gap: 2) do %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-green-100 text-green-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  System Ready
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-blue-100 text-blue-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                  Navigation Active
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>