        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3 lg:space-x-4">
            <div class="p-2 lg:p-3 bg-teal-100 rounded-xl">
              <svg class="w-6 h-6 lg:w-8 lg:h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
              </svg>
            </div>
            <div>
              <p class="text-xs lg:text-sm font-medium text-gray-500 uppercase tracking-wide">Available Devices</p>
              <p class="text-2xl lg:text-3xl font-bold text-gray-900"><%= @available_devices %></p>
              <p class="text-xs text-blue-600 font-medium mt-1">üìà Ready for deployment</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Rented Devices -->
    <div class="kt-card h-full">
      <div class="kt-card-content p-4 lg:p-6">
