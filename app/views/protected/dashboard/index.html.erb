              <p class="text-2xl lg:text-3xl font-bold text-gray-900"><%= @rented_devices %></p>
              <p class="text-xs text-orange-600 font-medium mt-1">‚è∞ Active rentals</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Device Types -->
    <div class="kt-card h-full">
      <div class="kt-card-content p-4 lg:p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3 lg:space-x-4">
            <div class="p-2 lg:p-3 bg-indigo-100 rounded-xl">
