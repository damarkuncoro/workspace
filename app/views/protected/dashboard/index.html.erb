                  </svg>
                </div>
                <h4 class="font-semibold text-gray-900 mb-1 text-sm lg:text-base">Issues</h4>
                <p class="text-xs text-gray-600">Support tickets</p>
              </div>
            <% end %>

            <%= link_to protected_networks_path, class: "group" do %>
