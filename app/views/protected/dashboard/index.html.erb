                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        Device <span class="font-semibold text-blue-600"><%= rental.device.label %></span> rented to <%= rental.customer.person_name %>
                      </p>
                      <p class="text-xs text-gray-500 mt-1"><%= rental.created_at.strftime('%B %d, %Y at %H:%M') %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>

            <% if @recent_issues.any? %>
              <% @recent_issues.first(2).each do |issue| %>
                <div class="p-4 lg:p-6 hover:bg-gray-50 transition-colors">
                  <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        New issue: <span class="font-semibold text-yellow-600"><%= issue.title.truncate(40) %></span>
                      </p>
                      <p class="text-xs text-gray-500 mt-1"><%= issue.created_at.strftime('%B %d, %Y at %H:%M') %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>

            <% if @recent_customers.empty? && @current_rentals.empty? && @recent_issues.empty? %>
              <div class="p-4 lg:p-6 text-center">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h4 class="text-lg font-medium text-gray-900 mb-2">Welcome to Support Cakra!</h4>
                <p class="text-gray-600 mb-4">Your account is ready and the dashboard is fully activated.</p>
                <div class="flex justify-center space-x-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    System Ready
                  </span>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-blue-100 text-blue-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    Navigation Active
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar Stats & Quick Info -->
    <div class="space-y-6">
      <!-- System Health -->
      <div class="kt-card h-full">
        <div class="kt-card-header bg-gradient-to-r from-emerald-50 to-green-50 border-b">
          <h3 class="text-lg font-bold text-gray-900 p-4 lg:p-6 pb-0">System Health</h3>
        </div>
        <div class="kt-card-content p-4 lg:p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-600">Database</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Healthy
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-600">API Services</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Operational
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-600">Device Sync</span>
              <% if @system_health[:device_sync] %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Synced
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  <svg class="w-3 h-3 mr-1 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                  </svg>
                  Syncing
                </span>
              <% end %>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-600">Network Monitoring</span>
              <% if @system_health[:network_monitoring] %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Active
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Inactive
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Today's Summary -->
      <div class="kt-card h-full">
        <div class="kt-card-header bg-gradient-to-r from-violet-50 to-purple-50 border-b">
          <h3 class="text-lg font-bold text-gray-900 p-4 lg:p-6 pb-0">Today's Summary</h3>
        </div>
        <div class="kt-card-content p-4 lg:p-6">
          <div class="space-y-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900"><%= Time.current.strftime('%B %d') %></div>
              <div class="text-sm text-gray-600"><%= Time.current.strftime('%A') %></div>
            </div>
            <div class="grid grid-cols-2 gap-4 pt-4">
              <div class="text-center">
                <div class="text-lg font-bold text-blue-600"><%= @customers_today %></div>
                <div class="text-xs text-gray-600">New Customers</div>
              </div>
              <div class="text-center">
                <div class="text-lg font-bold text-green-600"><%= @rentals_today %></div>
                <div class="text-xs text-gray-600">Device Rentals</div>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div class="text-center">
                <div class="text-lg font-bold text-yellow-600"><%= @issues_today %></div>
                <div class="text-xs text-gray-600">New Issues</div>
              </div>
              <div class="text-center">
                <div class="text-lg font-bold text-orange-600"><%= @returned_today %></div>
                <div class="text-xs text-gray-600">Returns</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Profile Actions -->
      <div class="kt-card h-full">
        <div class="kt-card-header bg-gradient-to-r from-orange-50 to-red-50 border-b">
          <h3 class="text-lg font-bold text-gray-900 p-4 lg:p-6 pb-0">Account Actions</h3>
        </div>
        <div class="kt-card-content p-4 lg:p-6">
          <div class="space-y-3">
            <%= link_to protected_profile_edit_path, class: "flex items-center p-3 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors group" do %>
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3 group-hover:bg-blue-200 transition-colors">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </div>
              <div>
                <div class="font-medium text-gray-900">Edit Profile</div>
                <div class="text-xs text-gray-600">Update your information</div>
              </div>
            <% end %>

            <%= link_to new_protected_role_request_path, class: "flex items-center p-3 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors group" do %>
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3 group-hover:bg-green-200 transition-colors">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <div class="font-medium text-gray-900">Request Role</div>
                <div class="text-xs text-gray-600">Apply for permissions</div>
              </div>
            <% end %>

            <%= button_to destroy_account_session_path, method: :delete, class: "flex items-center p-3 bg-red-50 hover:bg-red-100 rounded-lg transition-colors group w-full", form_class: "w-full" do %>
              <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center mr-3 group-hover:bg-red-200 transition-colors">
                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
              </div>
              <div>
                <div class="font-medium text-gray-900">Sign Out</div>
                <div class="text-xs text-gray-600">Securely log out</div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>