<%#
  Dashboard Index (Konsistensi Desain)
  - Baris 1 (xl: 4): dua kolom span_xl: 2 untuk Key & Secondary Metrics.
  - Baris 2 (xl: 4): satu kolom penuh span_xl: 4 merender Main Dashboard.
  Prinsip: SRP/DRY/KISS â€” hindari duplikasi kartu; gunakan partial utama.
%>

<%= kt_grid(cols: 1, cols_xl: 4, gap: 6, gap_lg: 8, margin_bottom: "mb-6 lg:mb-8") do %>
  <%= kt_column(span_xl: 2) do %>
    <%= render "protected/dashboard/partials/key_metrics" %>
  <% end %>

  <%= kt_column(span_xl: 2) do %>
    <%= render "protected/dashboard/partials/secondary_metrics" %>
  <% end %>
<% end %>


<%= kt_grid(cols: 1, cols_xl: 1, gap: 6, gap_lg: 8) do %>
  <%= kt_column(span_xl: 1) do %>
    <%= render "metronic/layouts/partials/page/main/content/tables/table_teams" %>
  <% end %>
<% end %>

<%= kt_grid(cols: 1, cols_xl: 4, gap: 6, gap_lg: 8) do %>
  <%= kt_column(span_xl: 4) do %>
    <%= render "protected/dashboard/partials/main_dashboard" %>
  <% end %>
<% end %>





