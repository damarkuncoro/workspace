<div class="max-w-7xl mx-auto p-6">
  <!-- Header Section -->
  <div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 rounded-lg shadow-lg p-8 mb-8 text-white">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold mb-2">Welcome to Support Cakra</h1>
        <p class="text-xl text-blue-100">Hello, <%= current_account.person_name.presence || current_account.email %>!</p>
        <p class="text-blue-200 mt-2">Manage your support system efficiently</p>
      </div>
      <div class="hidden md:block">
        <div class="text-right">
          <p class="text-sm text-blue-200">Current Time</p>
          <p class="text-lg font-semibold"><%= Time.current.strftime('%B %d, %Y %H:%M') %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Stats Row -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Accounts -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-100">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Accounts</p>
          <p class="text-2xl font-bold text-gray-900"><%= @total_accounts %></p>
        </div>
      </div>
    </div>

    <!-- Active Customers -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-100">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Active Customers</p>
          <p class="text-2xl font-bold text-gray-900"><%= @total_customers %></p>
        </div>
      </div>
    </div>

    <!-- Available Devices -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-teal-100">
          <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Available Devices</p>
          <p class="text-2xl font-bold text-gray-900"><%= @available_devices %></p>
        </div>
      </div>
    </div>

    <!-- Rented Devices -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-orange-100">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Rented Devices</p>
          <p class="text-2xl font-bold text-gray-900"><%= @rented_devices %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Alerts Section -->
  <% if @overdue_rentals.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Overdue Device Rentals</h3>
          <div class="mt-2 text-sm text-red-700">
            <p><%= @overdue_rentals.count %> device rental(s) are overdue and need immediate attention.</p>
          </div>
          <div class="mt-4">
            <div class="-mx-2 -my-1.5 flex">
              <%= link_to protected_customers_path, class: "bg-red-50 px-2 py-1.5 rounded-md text-sm font-medium text-red-800 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-red-50 focus:ring-red-600" do %>
                View Overdue Rentals â†’
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Feature Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <!-- Accounts Management -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="bg-gradient-to-r from-blue-500 to-blue-600 p-4">
        <div class="flex items-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
          <h3 class="text-xl font-bold text-white ml-3">Accounts</h3>
        </div>
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">Manage user accounts, permissions, and access control</p>
        <div class="space-y-2">
          <%= link_to protected_accounts_path, class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
            Manage Accounts
          <% end %>
          <% if current_account.is_administrator? %>
            <%= link_to protected_role_requests_path, class: "block w-full bg-blue-100 hover:bg-blue-200 text-blue-800 font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
              Role Requests (<%= RoleRequest.pending.count %>)
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Customers -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="bg-gradient-to-r from-green-500 to-green-600 p-4">
        <div class="flex items-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <h3 class="text-xl font-bold text-white ml-3">Customers</h3>
        </div>
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">View and manage customer information and support tickets</p>
        <div class="space-y-2">
          <%= link_to protected_customers_path, class: "block w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
            View Customers
          <% end %>
          <%= link_to new_protected_account_path, class: "block w-full bg-green-100 hover:bg-green-200 text-green-800 font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
            Add Customer
          <% end %>
        </div>
      </div>
    </div>

    <!-- Device Management -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="bg-gradient-to-r from-teal-500 to-cyan-500 p-4">
        <div class="flex items-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
          <h3 class="text-xl font-bold text-white ml-3">Devices</h3>
        </div>
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">Manage device inventory, rentals, and maintenance</p>
        <div class="grid grid-cols-2 gap-2">
          <%= link_to protected_devices_path, class: "bg-teal-600 hover:bg-teal-700 text-white font-medium py-2 px-3 rounded-md text-center text-sm transition duration-300" do %>
            All Devices
          <% end %>
          <%= link_to protected_device_types_path, class: "bg-cyan-600 hover:bg-cyan-700 text-white font-medium py-2 px-3 rounded-md text-center text-sm transition duration-300" do %>
            Device Types
          <% end %>
        </div>
      </div>
    </div>

    <!-- Issues & Support -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="bg-gradient-to-r from-yellow-500 to-orange-500 p-4">
        <div class="flex items-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-xl font-bold text-white ml-3">Issues</h3>
        </div>
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">Track and resolve customer and employee support issues</p>
        <div class="grid grid-cols-2 gap-2">
          <%= link_to protected_issues_customers_path, class: "bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-3 rounded-md text-center text-sm transition duration-300" do %>
            Customer Issues
          <% end %>
          <%= link_to protected_issues_employees_path, class: "bg-orange-600 hover:bg-orange-700 text-white font-medium py-2 px-3 rounded-md text-center text-sm transition duration-300" do %>
            Employee Issues
          <% end %>
        </div>
      </div>
    </div>

    <!-- Profile Management -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="bg-gradient-to-r from-indigo-500 to-indigo-600 p-4">
        <div class="flex items-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <h3 class="text-xl font-bold text-white ml-3">Profile</h3>
        </div>
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">Manage your personal information and account settings</p>
        <div class="space-y-2">
          <%= link_to protected_profile_show_path, class: "block w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
            View Profile
          <% end %>
          <%= link_to protected_profile_edit_path, class: "block w-full bg-indigo-100 hover:bg-indigo-200 text-indigo-800 font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
            Edit Profile
          <% end %>
        </div>
      </div>
    </div>

    <!-- Roles & Permissions -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="bg-gradient-to-r from-red-500 to-red-600 p-4">
        <div class="flex items-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <h3 class="text-xl font-bold text-white ml-3">Roles</h3>
        </div>
      </div>
      <div class="p-6">
        <p class="text-gray-600 mb-4">View your roles and request additional permissions</p>
        <div class="space-y-2">
          <%= link_to protected_roles_show_path, class: "block w-full bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
            My Roles
          <% end %>
          <%= link_to new_protected_role_request_path, class: "block w-full bg-red-100 hover:bg-red-200 text-red-800 font-medium py-2 px-4 rounded-md text-center transition duration-300" do %>
            Request Role
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity & Quick Actions -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h3>
      <div class="space-y-3">
        <% if @recent_customers.any? %>
          <% @recent_customers.each do |customer| %>
            <div class="flex items-center text-sm text-gray-600">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
              <span>New customer <strong><%= customer.person_name %></strong> registered</span>
              <span class="ml-auto text-xs text-gray-400"><%= customer.created_at.strftime('%b %d') %></span>
            </div>
          <% end %>
        <% end %>

        <% if @current_rentals.any? %>
          <% @current_rentals.first(3).each do |rental| %>
            <div class="flex items-center text-sm text-gray-600">
              <div class="w-2 h-2 bg-teal-500 rounded-full mr-3"></div>
              <span>Device <strong><%= rental.device.name %></strong> rented to <%= rental.customer.person_name %></span>
              <span class="ml-auto text-xs text-gray-400"><%= rental.created_at.strftime('%b %d') %></span>
            </div>
          <% end %>
        <% end %>

        <% if @recent_issues.any? %>
          <% @recent_issues.first(2).each do |issue| %>
            <div class="flex items-center text-sm text-gray-600">
              <div class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></div>
              <span>New issue: <strong><%= issue.title.truncate(30) %></strong></span>
              <span class="ml-auto text-xs text-gray-400"><%= issue.created_at.strftime('%b %d') %></span>
            </div>
          <% end %>
        <% end %>

        <% if @recent_customers.empty? && @current_rentals.empty? && @recent_issues.empty? %>
          <div class="flex items-center text-sm text-gray-600">
            <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
            <span>Welcome to Support Cakra! Your account is ready.</span>
          </div>
          <div class="flex items-center text-sm text-gray-600">
            <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
            <span>Dashboard and navigation system activated.</span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-2 gap-3">
        <%= link_to protected_profile_edit_path, class: "flex items-center justify-center p-3 bg-gray-100 hover:bg-gray-200 rounded-lg transition duration-300" do %>
          <div class="text-center">
            <svg class="w-6 h-6 text-gray-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span class="text-xs text-gray-600">Edit Profile</span>
          </div>
        <% end %>

        <%= link_to new_protected_role_request_path, class: "flex items-center justify-center p-3 bg-gray-100 hover:bg-gray-200 rounded-lg transition duration-300" do %>
          <div class="text-center">
            <svg class="w-6 h-6 text-gray-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            <span class="text-xs text-gray-600">Request Role</span>
          </div>
        <% end %>

        <%= link_to protected_role_requests_path, class: "flex items-center justify-center p-3 bg-gray-100 hover:bg-gray-200 rounded-lg transition duration-300" do %>
          <div class="text-center">
            <svg class="w-6 h-6 text-gray-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <span class="text-xs text-gray-600">View Stats</span>
          </div>
        <% end %>

        <%= button_to destroy_account_session_path, method: :delete, class: "flex items-center justify-center p-3 bg-red-100 hover:bg-red-200 rounded-lg transition duration-300", form_class: "w-full" do %>
          <div class="text-center">
            <svg class="w-6 h-6 text-red-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span class="text-xs text-red-600">Sign Out</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>