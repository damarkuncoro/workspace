<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Welcome Header -->
  <div class="kt-card h-full">
    <div class="kt-card-content lg:p-7.5 lg:pt-6 p-5">
