<%# Template: Devices#edit - gunakan page_header & partial form %>
<%= render 'protected/shared/partials/page_header',
  title: 'Ubah Perangkat',
  subtitle: 'Perbarui informasi perangkat' %>

<%= render 'protected/devices/partials/edit_form' %>

<%= render 'protected/shared/partials/page_actions',
  card: false,
  justify: 'justify-center',
  links: [
    link_to(protected_device_path(@device), class: 'kt-btn kt-btn-outline') do
      raw('<i class="ki-filled ki-eye"></i> Lihat Perangkat')
    end,
    link_to(protected_devices_path, class: 'kt-btn kt-btn-outline') do
      raw('<i class="ki-filled ki-arrow-left"></i> Kembali ke Daftar Perangkat')
    end
  ] %>
