<div class="max-w-4xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-green-600 to-teal-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Customer Details</h1>
          <p class="text-green-100 mt-1"><%= @customer.person_name %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_protected_customer_path(@customer), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-white bg-opacity-20 hover:bg-opacity-30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Customer
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Customer Information Cards -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Basic Information -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-6 py-4">
        <h3 class="text-lg font-medium text-gray-900">Basic Information</h3>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Customer Code</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-2 py-1 rounded"><%= @customer.customer_code %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Full Name</span>
          <span class="text-sm text-gray-900"><%= @customer.person_name %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Email Address</span>
          <span class="text-sm text-gray-900"><%= @customer.account_email %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @customer.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @customer.status.titleize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Account Details -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-6 py-4">
        <h3 class="text-lg font-medium text-gray-900">Account Details</h3>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Account ID</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-2 py-1 rounded"><%= @customer.person.account_id %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Member Since</span>
          <span class="text-sm text-gray-900"><%= @customer.created_at.strftime('%B %d, %Y') %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Last Updated</span>
          <span class="text-sm text-gray-900"><%= @customer.updated_at.strftime('%B %d, %Y') %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Date of Birth</span>
          <span class="text-sm text-gray-900"><%= @customer.person.date_of_birth&.strftime('%B %d, %Y') || 'Not provided' %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Roles & Permissions -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <h3 class="text-lg font-medium text-gray-900">Roles & Permissions</h3>
    </div>
    <div class="px-6 py-4">
      <div class="flex flex-wrap gap-2">
        <% @customer.person.account.roles.each do |role| %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= role.name.titleize %>
          </span>
        <% end %>
      </div>
      <% if @customer.person.account.roles.empty? %>
        <p class="text-sm text-gray-500 mt-2">No roles assigned</p>
      <% end %>
    </div>
  </div>

  <!-- Device Rentals -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <div class="flex justify-between items-center">
        <h3 class="text-lg font-medium text-gray-900">Device Rentals</h3>
        <%= link_to new_protected_customer_device_path( @customer), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Rent Device
        <% end %>
      </div>
    </div>
    <div class="px-6 py-4">
      <% current_rentals = @customer.current_device_rentals %>
      <% if current_rentals.any? %>
        <div class="space-y-3">
          <% current_rentals.each do |rental| %>
            <div class="flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-lg">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center bg-green-100">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= rental.device.name %></p>
                  <p class="text-xs text-gray-500">
                    <%= rental.device.device_type.name %> • Serial: <%= rental.device.serial_number %>
                    <% if rental.overdue? %>
                      • <span class="text-red-600 font-medium">Overdue</span>
                    <% else %>
                      • Due: <%= rental.rented_until&.strftime('%b %d, %Y') %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <% if rental.overdue? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                    Overdue
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                <% end %>
                <%= link_to protected_customer_device_path(@customer, rental), class: "text-green-600 hover:text-green-900" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="mt-4 text-center">
          <%= link_to protected_customer_devices_path(@customer), class: "text-sm text-green-600 hover:text-green-900 font-medium" do %>
            View all rentals (<%= @customer.customer_devices.count %>) →
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No device rentals</h3>
          <p class="mt-1 text-sm text-gray-500">This customer hasn't rented any devices yet.</p>
          <div class="mt-4">
            <%= link_to new_protected_customer_device_path(@customer), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-green-600 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Rent First Device
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Customer Issues -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <div class="flex justify-between items-center">
        <h3 class="text-lg font-medium text-gray-900">Support Issues</h3>
        <%= link_to new_protected_customer_issue_path(@customer), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          New Issue
        <% end %>
      </div>
    </div>
    <div class="px-6 py-4">
      <% issues = @customer.issues.limit(5) %>
      <% if issues.any? %>
        <div class="space-y-3">
          <% issues.each do |issue| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition duration-150">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center <%= issue.status == 'open' ? 'bg-red-100' : issue.status == 'in_progress' ? 'bg-yellow-100' : 'bg-green-100' %>">
                    <svg class="w-4 h-4 <%= issue.status == 'open' ? 'text-red-600' : issue.status == 'in_progress' ? 'text-yellow-600' : 'text-green-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= issue.title %></p>
                  <p class="text-xs text-gray-500">
                    <%= issue.status.titleize %> • <%= issue.created_at.strftime('%b %d, %Y') %>
                    <% if issue.assigned_to %>
                      • Assigned to <%= issue.assigned_to.person_name %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= status_badge_class(issue.status) %>">
                  <%= issue.status.titleize %>
                </span>
                <%= link_to protected_customer_issue_path(@customer, issue), class: "text-indigo-600 hover:text-indigo-900" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="mt-4 text-center">
          <%= link_to protected_customer_issues_path(@customer), class: "text-sm text-indigo-600 hover:text-indigo-900 font-medium" do %>
            View all issues (<%= @customer.issues.count %>) →
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No support issues</h3>
          <p class="mt-1 text-sm text-gray-500">This customer hasn't reported any issues yet.</p>
          <div class="mt-4">
            <%= link_to new_protected_customer_issue_path(@customer), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Create First Issue
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity (Placeholder) -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <h3 class="text-lg font-medium text-gray-900">Recent Activity</h3>
    </div>
    <div class="px-6 py-4">
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No recent activity</h3>
        <p class="mt-1 text-sm text-gray-500">Activity tracking will be available soon.</p>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-center space-x-4">
    <%= link_to protected_customers_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Customers
    <% end %>

    <%= link_to protected_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v2H8V5z"></path>
      </svg>
      Dashboard
    <% end %>
  </div>
</div>