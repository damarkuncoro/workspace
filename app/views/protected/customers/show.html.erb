<h1>Customer Details</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Customer Information</h5>
    <div class="row">
      <div class="col-md-6">
        <p><strong>Customer Code:</strong> <%= @customer.customer_code %></p>
        <p><strong>Name:</strong> <%= @customer.person_name %></p>
        <p><strong>Email:</strong> <%= @customer.account_email %></p>
      </div>
      <div class="col-md-6">
        <p><strong>Status:</strong>
          <span class="badge <%= @customer.status == 'active' ? 'bg-success' : 'bg-secondary' %>">
            <%= @customer.status %>
          </span>
        </p>
        <p><strong>Created At:</strong> <%= l(@customer.created_at) %></p>
        <p><strong>Updated At:</strong> <%= l(@customer.updated_at) %></p>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit', edit_protected_customer_path(@customer), class: 'btn btn-warning' %>
  <%= link_to 'Back to Customers', protected_customers_path, class: 'btn btn-secondary' %>
  <%= link_to 'Back to Dashboard', protected_dashboard_path, class: 'btn btn-secondary' %>
</div>