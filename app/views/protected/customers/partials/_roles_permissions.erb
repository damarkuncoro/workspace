<%#
  Partial: Customers Roles & Permissions
  Tujuan: Menampilkan roles & permissions dari akun pelanggan.
  Prinsip: SRP â€” menerima `customer` lewat locals dan memakai kt_card.
  Locals:
    - customer: instance Customer (wajib)
  Pemakaian:
    <%= render 'protected/customers/partials/roles_permissions', customer: @customer %>


<%= kt_card do %>
  <%= kt_card_header(title: 'Roles & Permissions') %>
  <%= kt_card_content do %>
    <div class="flex flex-wrap gap-2">
      <% customer.person.account.roles.each do |role| %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= role.name.titleize %>
        </span>
      <% end %>
    </div>
    <% if customer.person.account.roles.empty? %>
      <p class="text-sm text-gray-500 mt-2">No roles assigned</p>
    <% end %>
  <% end %>
<% end %>