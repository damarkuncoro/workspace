<%#
  Partial: Customers Device Rentals
  Tujuan: Menampilkan daftar rental perangkat untuk pelanggan.
  Prinsip: SRP — menerima `customer` lewat locals dan memakai kt_card.
  Locals:
    - customer: instance Customer (wajib)
  Pemakaian:
    <%= render 'protected/customers/partials/device_rentals', customer: @customer %>


<%= kt_card do %>
  <%= kt_card_header(title: 'Device Rentals') do %>
    <%= link_to new_protected_customer_device_path(customer), class: "kt-btn kt-btn-success" do %>
      <i class="ki-filled ki-plus"></i> Rent Device
    <% end %>
  <% end %>
  <%= kt_card_content do %>
    <% current_rentals = customer.current_device_rentals %>
    <% if current_rentals.any? %>
      <div class="space-y-3">
        <% current_rentals.each do |rental| %>
          <div class="flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 rounded-full flex items-center justify-center bg-green-100">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                  </svg>
                </div>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900"><%= rental.device.name %></p>
                <p class="text-xs text-gray-500">
                  <%= rental.device.device_type.name %> • Serial: <%= rental.device.serial_number %>
                  <% if rental.overdue? %>
                    • <span class="text-red-600 font-medium">Overdue</span>
                  <% else %>
                    • Due: <%= rental.rented_until&.strftime('%b %d, %Y') %>
                  <% end %>
                </p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <% if rental.overdue? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                  Overdue
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              <% end %>
              <%= link_to protected_customer_device_path(customer, rental), class: "text-green-600 hover:text-green-900" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4 text-center">
        <%= link_to protected_customer_devices_path(customer), class: "kt-link kt-link-success" do %>
          View all rentals (<%= customer.customer_devices.count %>) →
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No device rentals</h3>
        <p class="mt-1 text-sm text-gray-500">This customer hasn't rented any devices yet.</p>
        <div class="mt-4">
          <%= link_to new_protected_customer_device_path(customer), class: "kt-btn kt-btn-success kt-btn-light" do %>
            <i class="ki-filled ki-plus"></i> Rent First Device
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>