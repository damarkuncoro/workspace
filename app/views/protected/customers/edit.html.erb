<!--
  View: Customers Edit
  Tujuan: Gunakan header & actions terpadu, render form via wrapper konsisten.
  Prinsip: DRY, SRP, KISS.
-->

<%= render 'protected/shared/partials/page_header',
            title: 'Edit Customer',
            subtitle: 'Update customer information' %>

<%= render 'protected/customers/partials/edit_form' %>

<%= render 'protected/shared/partials/page_actions',
            card: false,
            justify: 'justify-center',
            links: [
              link_to(protected_customer_path(@customer), class: 'kt-btn kt-btn-outline') do
                raw('<i class="ki-filled ki-eye"></i> View Customer')
              end,
              link_to(protected_customers_path, class: 'kt-btn kt-btn-outline') do
                raw('<i class="ki-filled ki-arrow-left"></i> Back to Customers')
              end
            ] %>