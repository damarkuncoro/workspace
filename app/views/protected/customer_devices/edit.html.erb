<%# Header halaman edit mengikuti pola Accounts#edit %>
<%= render 'protected/shared/partials/page_header',
  title: 'Edit Device Rental',
  subtitle: "Update rental information for #{device_label(@customer_device.device)}" %>

<%# Form edit rental: gunakan partial lokal agar tidak memecah struktur saat ini %>
<%= render 'form', customer_device: @customer_device %>

<%# Quick actions: selaraskan tombol navigasi ke shared page_actions (KT styles) %>
<%= render 'protected/shared/partials/page_actions',
  card: false,
  justify: 'justify-center',
  links: [
    link_to(protected_customer_device_path(@customer_device.customer, @customer_device), class: "kt-btn kt-btn-outline") do
      raw('<i class="ki-filled ki-eye"></i> View Rental')
    end,
    link_to(protected_customer_devices_path(@customer_device.customer), class: "kt-btn kt-btn-outline") do
      raw('<i class="ki-filled ki-arrow-left"></i> Back to Rentals')
    end
  ] %>
