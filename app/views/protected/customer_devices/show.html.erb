  <%= render 'protected/shared/partials/page_header',
    title: 'Device Rental Details',
    subtitle: "#{device_label(@customer_device.device)} â€¢ #{customer_name(@customer_device.customer)}" %>

  <%# Quick Actions menggunakan partial shared agar konsisten dengan Accounts#show %>
  <% action_links = [] %>
  <% if @customer_device.active? %>
    <% action_links << link_to('Return Device',
      return_protected_customer_device_path(@customer_device),
      method: :patch,
      data: { confirm: 'Are you sure you want to return this device?' },
      class: 'kt-btn kt-btn-success') %>
  <% end %>
  <% action_links << link_to('Edit Rental', edit_protected_customer_device_path(@customer_device.customer, @customer_device), class: 'kt-btn kt-btn-warning') %>
  <% action_links << link_to('Back to Rentals', protected_customer_devices_path(@customer_device.customer), class: 'kt-btn kt-btn-outline') %>
  <% action_links << link_to('View Customer', protected_customer_path(@customer_device.customer), class: 'kt-btn kt-btn-outline') %>

  <%= kt_grid(cols: 1) do %>
    <%= kt_column(span: 1) do %>
      <%= render 'protected/shared/partials/page_actions',
        card: true,
        title: 'Quick Actions',
        justify: 'justify-start',
        gap_class: 'gap-3',
        links: action_links %>
    <% end %>
  <% end %>

  <!-- Rental Information Cards -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Device Information -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-6 py-4">
        <h3 class="text-lg font-medium text-gray-900">Device Information</h3>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Device Name</span>
          
          <span class="text-sm text-gray-900"><%= device_label(@customer_device.device) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Device Type</span>
          <span class="text-sm text-gray-900"><%= @customer_device.device.device_type.name %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Serial Number</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-2 py-1 rounded"><%= @customer_device.device.serial_number %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Device Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @customer_device.device.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @customer_device.device.status.titleize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Customer Information -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-6 py-4">
        <h3 class="text-lg font-medium text-gray-900">Customer Information</h3>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Customer Name</span>
          
          <span class="text-sm text-gray-900"><%= customer_name(@customer_device.customer) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Email</span>
          <span class="text-sm text-gray-900"><%= customer_email(@customer_device.customer) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Customer Code</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-2 py-1 rounded"><%= @customer_device.customer.customer_code %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Customer Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @customer_device.customer.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @customer_device.customer.status.titleize %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Rental Details -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <h3 class="text-lg font-medium text-gray-900">Rental Details</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Rental Status</label>
          <div class="mt-1">
            
            <%= status_tag(@customer_device) %>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Rented From</label>
          
          <p class="mt-1 text-sm text-gray-900"><%= rented_from_label(@customer_device, '%B %d, %Y') %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Rented Until</label>
          <p class="mt-1 text-sm text-gray-900">
            <% if @customer_device.rented_until %>
              <%= @customer_device.rented_until.strftime('%B %d, %Y') %>
            <% else %>
              <span class="text-gray-500">Ongoing</span>
            <% end %>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Created</label>
          <p class="mt-1 text-sm text-gray-900"><%= @customer_device.created_at.strftime('%B %d, %Y %H:%M') %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Device Activities -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <h3 class="text-lg font-medium text-gray-900">Device Activity History</h3>
    </div>
    <div class="px-6 py-4">
      <% if @device_activities.any? %>
        <div class="space-y-3">
          <% @device_activities.each do |activity| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center <%= activity.event_type == 'rented' ? 'bg-green-100' : activity.event_type == 'returned' ? 'bg-blue-100' : 'bg-gray-100' %>">
                    <svg class="w-4 h-4 <%= activity.event_type == 'rented' ? 'text-green-600' : activity.event_type == 'returned' ? 'text-blue-600' : 'text-gray-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= activity.event_type == 'rented' ? 'M12 6v6m0 0v6m0-6h6m-6 0H6' : activity.event_type == 'returned' ? 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' : 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' %>"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= activity.description %></p>
                  <p class="text-xs text-gray-500"><%= activity.recorded_at.strftime('%B %d, %Y %H:%M') %></p>
                </div>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= activity.event_type.titleize %>
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No activity history</h3>
          <p class="mt-1 text-sm text-gray-500">Activity tracking will be available soon.</p>
        </div>
      <% end %>
    </div>
  </div>
