<div class="max-w-4xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-teal-600 to-cyan-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Device Rental Details</h1>
          <p class="text-teal-100 mt-1"><%= @customer_device.device.name %> - <%= @customer_device.customer.person_name %></p>
        </div>
        <div class="flex space-x-3">
          <% if @customer_device.active? %>
            <%= button_to return_protected_customer_device_path(@customer_device), method: :patch, data: { confirm: 'Are you sure you want to return this device?' }, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Return Device
            <% end %>
          <% end %>
          <%= link_to edit_protected_customer_device_path(@customer_device.customer, @customer_device), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-white bg-opacity-20 hover:bg-opacity-30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Rental
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Rental Information Cards -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Device Information -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-6 py-4">
        <h3 class="text-lg font-medium text-gray-900">Device Information</h3>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Device Name</span>
          <span class="text-sm text-gray-900"><%= @customer_device.device.name %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Device Type</span>
          <span class="text-sm text-gray-900"><%= @customer_device.device.device_type.name %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Serial Number</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-2 py-1 rounded"><%= @customer_device.device.serial_number %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Device Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @customer_device.device.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @customer_device.device.status.titleize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Customer Information -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gray-50 px-6 py-4">
        <h3 class="text-lg font-medium text-gray-900">Customer Information</h3>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Customer Name</span>
          <span class="text-sm text-gray-900"><%= @customer.inspect %></span>
          <span class="text-sm text-gray-900"><%= @customer_device.customer.person_name %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Email</span>
          <span class="text-sm text-gray-900"><%= @customer_device.customer.account_email %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Customer Code</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-2 py-1 rounded"><%= @customer_device.customer.customer_code %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-500">Customer Status</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @customer_device.customer.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @customer_device.customer.status.titleize %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Rental Details -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <h3 class="text-lg font-medium text-gray-900">Rental Details</h3>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Rental Status</label>
          <div class="mt-1">
            <% if @customer_device.overdue? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Overdue
              </span>
            <% elsif @customer_device.active? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Active
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                <%= @customer_device.status.titleize %>
              </span>
            <% end %>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Rented From</label>
          <p class="mt-1 text-sm text-gray-900"><%= @customer_device.rented_from.strftime('%B %d, %Y') %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Rented Until</label>
          <p class="mt-1 text-sm text-gray-900">
            <% if @customer_device.rented_until %>
              <%= @customer_device.rented_until.strftime('%B %d, %Y') %>
            <% else %>
              <span class="text-gray-500">Ongoing</span>
            <% end %>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Created</label>
          <p class="mt-1 text-sm text-gray-900"><%= @customer_device.created_at.strftime('%B %d, %Y %H:%M') %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Device Activities -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4">
      <h3 class="text-lg font-medium text-gray-900">Device Activity History</h3>
    </div>
    <div class="px-6 py-4">
      <% if @device_activities.any? %>
        <div class="space-y-3">
          <% @device_activities.each do |activity| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center <%= activity.event_type == 'rented' ? 'bg-green-100' : activity.event_type == 'returned' ? 'bg-blue-100' : 'bg-gray-100' %>">
                    <svg class="w-4 h-4 <%= activity.event_type == 'rented' ? 'text-green-600' : activity.event_type == 'returned' ? 'text-blue-600' : 'text-gray-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= activity.event_type == 'rented' ? 'M12 6v6m0 0v6m0-6h6m-6 0H6' : activity.event_type == 'returned' ? 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' : 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' %>"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= activity.description %></p>
                  <p class="text-xs text-gray-500"><%= activity.recorded_at.strftime('%B %d, %Y %H:%M') %></p>
                </div>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= activity.event_type.titleize %>
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No activity history</h3>
          <p class="mt-1 text-sm text-gray-500">Activity tracking will be available soon.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-center space-x-4">
    <%= link_to protected_customer_path(@customer_device.customer), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Rentals
    <% end %>

    <%= link_to protected_customer_path(@customer_device.customer), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      View Customer
    <% end %>
  </div>
</div>
