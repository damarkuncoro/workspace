<%# Partial: Protected::CustomerDevices form
    Tujuan: Form penyewaan perangkat untuk Customer.
    Catatan: Gunakan atribut `Device#label` sebagai nama tampil (bukan `name`).
    Prinsip: SRP, DRY, KISS, YAGNI. %>

<%= form_with(model: [:protected, customer_device], local: true, class: "space-y-6") do |form| %>

  <%= kt_form_errors(customer_device) %>

  <%= kt_form_section('Customer Information', class: 'bg-blue-50 p-4 rounded-lg') do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= kt_display_field('Customer Name', @customer.person_name, class: 'border-blue-300 bg-blue-50 text-blue-900') %>
      <%= kt_display_field('Customer Code', @customer.customer_code, class: 'border-blue-300 bg-blue-50 text-blue-900') %>
    </div>
  <% end %>

  <%= kt_form_section do %>
    <label for="customer_device_device_id" class="block text-sm font-medium text-gray-700">
      Select Device <span class="text-red-500">*</span>
    </label>
    <div class="mt-1">
    <% if @available_devices%>
      <%= form.select :device_id,
          options_for_select(@available_devices.map { |device| ["#{device.label} (#{device.device_type.name}) - SN: #{device.serial_number}", device.id] }, customer_device.device_id),
          { include_blank: "Choose a device..." },
          class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <% end %>
    <p class="mt-1 text-sm text-gray-500">Only available devices are shown in this list.</p>
  <% end %>

  <!-- Rental Period -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="customer_device_rented_from" class="block text-sm font-medium text-gray-700">
        Rented From <span class="text-red-500">*</span>
      </label>
      <div class="mt-1">
        <%= form.date_field :rented_from,
            value: customer_device.rented_from || Date.current,
            class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <p class="mt-1 text-sm text-gray-500">The date when the rental starts.</p>
    </div>

    <div>
      <label for="customer_device_rented_until" class="block text-sm font-medium text-gray-700">
        Rented Until
      </label>
      <div class="mt-1">
        <%= form.date_field :rented_until,
            class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <p class="mt-1 text-sm text-gray-500">Optional: Set a return date. Leave empty for ongoing rental.</p>
    </div>
  </div>

  <%= kt_form_section('Device Configuration', class: 'hidden', id: 'configuration-section') do %>
    <label for="customer_device_config" class="block text-sm font-medium text-gray-700">
      Device Configuration <span class="text-red-500">*</span>
    </label>
    <div class="mt-1">
      <%= form.text_area :config,
          rows: 6,
          placeholder: "Enter device configuration in JSON format according to the device type schema...",
          class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm font-mono",
          value: customer_device.config.present? ? JSON.pretty_generate(customer_device.config) : '' %>
    </div>
    <div class="mt-2 p-3 bg-gray-50 rounded-md">
      <p class="text-sm text-gray-600 mb-2"><strong>Schema Requirements:</strong></p>
      <div id="schema-requirements" class="text-sm text-gray-700 font-mono bg-white p-2 rounded border">
        Select a device to see configuration requirements.
      </div>
    </div>
    <p class="mt-2 text-sm text-gray-500">Configuration must match the JSON schema defined for the selected device type.</p>
  <% end %>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const deviceSelect = document.getElementById('customer_device_device_id');
      const configSection = document.getElementById('configuration-section');
      const schemaRequirements = document.getElementById('schema-requirements');

      if (deviceSelect) {
        deviceSelect.addEventListener('change', function() {
          const deviceId = this.value;
          if (deviceId) {
            // Show configuration section
            configSection.classList.remove('hidden');

            // Fetch device schema (you would need to implement this endpoint)
            fetch(`/protected/devices/${deviceId}/schema`)
              .then(response => response.json())
              .then(data => {
                if (data.schema) {
                  schemaRequirements.innerHTML = `<pre>${JSON.stringify(data.schema, null, 2)}</pre>`;
                } else {
                  schemaRequirements.innerHTML = 'No schema defined for this device type.';
                }
              })
              .catch(error => {
                schemaRequirements.innerHTML = 'Error loading schema.';
              });
          } else {
            configSection.classList.add('hidden');
          }
        });

        // Trigger change on page load if device is already selected
        if (deviceSelect.value) {
          deviceSelect.dispatchEvent(new Event('change'));
        }
      }
    });
  </script>

  <%= kt_form_actions(form, protected_customer_devices_path(@customer), 'Create Rental', data: { disable_with: "Creating..." }) %>
<% end %>
