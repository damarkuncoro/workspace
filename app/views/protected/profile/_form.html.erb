
      <%= form_with model: @person, url: protected_profile_update_path, method: :patch, local: true, class: "space-y-6" do |f| %>
        <div>
          <label for="person_name" class="block text-sm font-medium text-gray-700">
            Full Name <span class="text-red-500">*</span>
          </label>
          <div class="mt-1">
            <%= f.text_field :name,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "Enter your full name",
                required: true %>
          </div>
          <p class="mt-1 text-sm text-gray-500">This is the name that will be displayed on your profile.</p>
        </div>

        <div>
          <label for="person_date_of_birth" class="block text-sm font-medium text-gray-700">
            Date of Birth <span class="text-red-500">*</span>
          </label>
          <div class="mt-1">
            <%= f.date_field :date_of_birth,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                required: true %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Please enter your date of birth in YYYY-MM-DD format.</p>
        </div>

        <!-- Account Information (Read-only) -->
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Account Information</h3>
          <div class="grid grid-cols-1 gap-3 text-sm">
            <div>
              <span class="font-medium text-gray-700">Email:</span>
              <span class="text-gray-900 ml-2"><%= current_account.email %></span>
            </div>
            <div>
              <span class="font-medium text-gray-700">Member Since:</span>
              <span class="text-gray-900 ml-2"><%= current_account.created_at.strftime('%B %d, %Y') %></span>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <%= link_to 'Cancel', protected_profile_show_path,
              class: "kt-btn kt-btn-secondary" %>

            <%= f.submit 'Update Profile',
              class: "kt-btn kt-btn-primary inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
              data: { disable_with: "Updating..." } %>

        </div>
      <% end %>