<%= hero_profile(
  account: {
    name: "#{ @person.name || 'Not provided' }",
    avatar: "/assets/media/avatars/300-1.png",
    verified: true,
    details: [
      { icon: "ki-abstract-41", text: "KeenThemes" },
      { icon: "ki-geolocation", text: "SF, Bay Area" },
      { icon: "ki-sms", text: "#{ @person.person_email || 'Not provided' }", href: "mailto:#{ @person.person_email || 'Not provided' }" }
    ]
  }
) %>

<%= profile_menu_container(
  menu: [
    { title: "Profiles", submenu: [
        { title: "Default", href: "/profiles/default" },
        { title: "Creator", href: "/profiles/creator" },
        { title: "Company", href: "/profiles/company" },
        { title: "NFT", href: "/profiles/nft" },
        { title: "Blogger", href: "/profiles/blogger" },
        { title: "CRM", href: "/profiles/crm" },
        { title: "More", submenu: [
            { title: "Gamer", href: "/profiles/gamer" },
            { title: "Feeds", href: "/profiles/feeds" },
            { title: "Plain", href: "/profiles/plain" },
            { title: "Modal", href: "/profiles/modal" }
          ]
        }
      ]
    },
    { title: "Projects", submenu: [
        { title: "3 Columns", href: "/projects/3-columns" },
        { title: "2 Columns", href: "/projects/2-columns" }
      ]
    },
    { title: "Works", href: "/works" },
    { title: "Teams", href: "/teams" },
    { title: "Network", href: "/network" },
    { title: "Activity", href: "/activity" },
    { title: "More", submenu: [
        { title: "Campaigns - Card", href: "/campaigns/card" },
        { title: "Campaigns - List", href: "/campaigns/list" },
        { title: "Empty", href: "/empty" }
      ]
    }
  ],
  actions: {
    connect: { icon: "ki-users", label: "Connect" },
    message: { icon: "ki-messages" },
    more: {
      icon: "ki-dots-vertical",
      items: [
        { icon: "ki-coffee", label: "Share Profile", data: { "kt-modal-toggle": "#share_profile_modal" } },
        { icon: "ki-award", label: "Give Award", data: { "kt-modal-toggle": "#give_award_modal" } },
        { icon: "ki-coffee", label: "Stay Updated", switch: true, checked: true },
        { icon: "ki-information-2", label: "Report User", data: { "kt-modal-toggle": "#report_user_modal" } }
      ]
    }
  }
) %>

<%= container(columns: 1) do %>
 <%= profile_header_section(
      title: "My Dashboard",
      description: "Control center for your account",
      actions: [
        ["View Reports", "#", "kt-btn kt-btn-success"],
        ["Logout", "#", "kt-btn kt-btn-danger"]
      ]
    ) %>
<% end %>

<%= container(columns: 3) do %>
  <%= column(span: 2) do %>
    <%= personal_info_card(person: @person) %>
  <% end %>
<% end %>
<%= container(columns: 3) do %>
  <%= column(span: 2) do %>
    <%= basic_settings_card(person: @person) %>
  <% end %>
<% end %>






     
<%= container(columns: 2) do %>
  <%= column(span: 1) do %>
    <%= community_badges_card %>
  <% end %>

  <%= column(span: 1) do %>
    <%= community_badges_card %>  
  <% end %>

  <%= column(span: 1) do %>
    
    <%= community_badges_card([
      ["stroke-primary/10 fill-primary/5", "ki-heart", "text-primary"],
      ["stroke-red-200 fill-red-50", "ki-heart", "text-red-500"],
      ["stroke-blue-200 fill-blue-50", "ki-star", "text-blue-500"]
    ]) %>

  <% end %>
<% end %>