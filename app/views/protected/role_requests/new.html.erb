<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-4">
      <h1 class="text-2xl font-bold text-white">Request New Role</h1>
      <p class="text-indigo-100 mt-1">Submit a request for additional role access</p>
    </div>

    <div class="p-6">
      <%= form_with(model: @role_request, url: protected_role_requests_path, local: true, class: "space-y-6") do |form| %>
        <% if @role_request.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@role_request.errors.count, "error") %> prohibited this role request from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc pl-5 space-y-1">
                    <% @role_request.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Role Selection -->
        <div>
          <label for="role_request_role_id" class="block text-sm font-medium text-gray-700">
            Requested Role <span class="text-red-500">*</span>
          </label>
          <div class="mt-1">
            <%= form.select :role_id,
                options_from_collection_for_select(@available_roles, :id, :name),
                { include_blank: "Select a role..." },
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Choose the role you want to request access to.</p>
        </div>

        <!-- Request Comment -->
        <div>
          <label for="role_request_comment" class="block text-sm font-medium text-gray-700">
            Reason for Request
          </label>
          <div class="mt-1">
            <%= form.text_area :comment,
                rows: 4,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "Please explain why you need this role and how you plan to use it..." %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Provide a clear explanation of why you need this role. This will help administrators make an informed decision.</p>
        </div>

        <!-- Current Roles Info -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">Your Current Roles</h3>
              <div class="mt-2 text-sm text-blue-700">
                <p>You currently have access to: <%= current_account.roles.pluck(:name).join(', ').titleize %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to protected_role_requests_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Cancel
          <% end %>

          <%= form.submit "Submit Request",
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
              data: { disable_with: "Submitting..." } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Help Section -->
  <div class="mt-6 bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="bg-gray-50 px-6 py-4">
      <h3 class="text-lg font-medium text-gray-900">Request Guidelines</h3>
    </div>
    <div class="px-6 py-4">
      <div class="space-y-3 text-sm text-gray-600">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p><strong>Be Specific:</strong> Clearly explain what you need the role for and how it will help your work.</p>
          </div>
        </div>
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p><strong>Response Time:</strong> Requests are typically reviewed within 1-2 business days.</p>
          </div>
        </div>
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p><strong>Approval Required:</strong> All role requests require administrator approval before access is granted.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>