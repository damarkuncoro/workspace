<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-4">
      <h1 class="text-2xl font-bold text-white">Add New Device Type</h1>
      <p class="text-purple-100 mt-1">Create a new category for device classification</p>
    </div>

    <div class="p-6">
      <%= render "form", device_type: @device_type %>
    </div>
  </div>

  <!-- Navigation Links -->
  <div class="mt-6 text-center">
    <%= link_to protected_device_types_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Device Types
    <% end %>
  </div>
</div>
