<%# Partial: Toolbar filter & pencarian DeviceTypes
  Tujuan: Menyediakan pencarian sederhana dengan konsistensi KT helpers
  Catatan: Menggunakan param `q` untuk query teks
%>

<%= kt_card(margin_bottom: "mb-4") do %>
  <%= kt_card_content(padding: "p-4") do %>
    <%= form_with url: protected_device_types_path, method: :get, local: true do |f| %>
      <div class="flex flex-col gap-3 lg:flex-row lg:items-center lg:gap-4">
        <div class="flex-1">
          <%= f.label :q, "Cari tipe perangkat", class: "block text-sm text-gray-600 mb-1" %>
          <%= f.text_field :q, value: params[:q], placeholder: "Masukkan kata kunciâ€¦", class: "w-full border rounded px-3 py-2" %>
        </div>
        <div class="flex gap-2">
          <%= f.submit "Cari", class: "kt-btn kt-btn-primary" %>
          <%= link_to "Reset", protected_device_types_path, class: "kt-btn kt-btn-secondary" %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

