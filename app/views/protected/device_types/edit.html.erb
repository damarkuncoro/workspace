<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-yellow-600 to-orange-600 px-6 py-4">
      <h1 class="text-2xl font-bold text-white">Edit Device Type</h1>
      <p class="text-yellow-100 mt-1">Update information for <%= @device_type.name %></p>
    </div>

    <div class="p-6">
      <%= render "form", device_type: @device_type %>
    </div>
  </div>

  <!-- Navigation Links -->
  <div class="mt-6 text-center">
    <div class="flex justify-center space-x-4">
      <%= link_to protected_device_type_path(@device_type), class: "text-sm text-gray-600 hover:text-gray-900" do %>
        <svg class="inline h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        View Type
      <% end %>

      <%= link_to protected_device_types_path, class: "text-sm text-gray-600 hover:text-gray-900" do %>
        <svg class="inline h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Device Types
      <% end %>
    </div>
  </div>
</div>
