<div class="max-w-4xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Device Type Details</h1>
          <p class="text-purple-100 mt-1"><%= @device_type.name %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_protected_device_type_path(@device_type), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-white bg-opacity-20 hover:bg-opacity-30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Type
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Device Type Information Cards -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Basic Information -->
    <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Type Information
        </h3>
      </div>
      <div class="px-6 py-5 space-y-4">
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Type Name</span>
          <span class="text-sm font-semibold text-gray-900 bg-indigo-50 px-3 py-1 rounded-lg"><%= @device_type.name %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Type ID</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-3 py-1 rounded-lg border"><%= @device_type.id.to_s.first(12) %>...</span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Created</span>
          <span class="text-sm text-gray-900"><%= @device_type.created_at.strftime('%B %d, %Y') %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Last Updated</span>
          <span class="text-sm text-gray-900"><%= @device_type.updated_at.strftime('%B %d, %Y') %></span>
        </div>
      </div>
    </div>

    <!-- Statistics -->
    <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Device Statistics
        </h3>
      </div>
      <div class="px-6 py-5 space-y-4">
        <div class="flex justify-between items-center py-3 px-4 bg-gray-50 rounded-lg">
          <span class="text-sm font-medium text-gray-600 flex items-center">
            <div class="w-3 h-3 bg-gray-400 rounded-full mr-2"></div>
            Total Devices
          </span>
          <span class="text-lg font-bold text-gray-900"><%= @device_type.devices.count %></span>
        </div>
        <div class="flex justify-between items-center py-3 px-4 bg-green-50 rounded-lg">
          <span class="text-sm font-medium text-gray-600 flex items-center">
            <div class="w-3 h-3 bg-green-400 rounded-full mr-2"></div>
            Available Devices
          </span>
          <span class="text-lg font-bold text-green-700"><%= @device_type.devices.available.count %></span>
        </div>
        <div class="flex justify-between items-center py-3 px-4 bg-blue-50 rounded-lg">
          <span class="text-sm font-medium text-gray-600 flex items-center">
            <div class="w-3 h-3 bg-blue-400 rounded-full mr-2"></div>
            Rented Devices
          </span>
          <span class="text-lg font-bold text-blue-700"><%= @device_type.devices.rented.count %></span>
        </div>
        <div class="flex justify-between items-center py-3 px-4 bg-yellow-50 rounded-lg">
          <span class="text-sm font-medium text-gray-600 flex items-center">
            <div class="w-3 h-3 bg-yellow-400 rounded-full mr-2"></div>
            Maintenance
          </span>
          <span class="text-lg font-bold text-yellow-700"><%= @device_type.devices.maintenance.count %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Description -->
  <% if @device_type.description.present? %>
    <div class="bg-white shadow-xl rounded-xl overflow-hidden mb-6 border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Description
        </h3>
      </div>
      <div class="px-6 py-5">
        <p class="text-sm text-gray-700 leading-relaxed"><%= @device_type.description %></p>
      </div>
    </div>
  <% end %>


  <!-- Associated Devices -->
  <div class="bg-white shadow-xl rounded-xl overflow-hidden mb-6 border border-gray-100">
    <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        Associated Devices
      </h3>
    </div>
    <div class="px-6 py-4">
      <% if @device_type.devices.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Device Name
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Serial Number
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Current Customer
                </th>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @device_type.devices.each do |device| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= device.label %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900 font-mono bg-gray-100 px-2 py-1 rounded">
                      <%= device.serial_number %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if device.available? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Available
                      </span>
                    <% elsif device.rented? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        Rented
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <%= device.status.titleize %>
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if device.current_customer %>
                      <div class="text-sm text-gray-900">
                        <%= device.current_customer.person_name %>
                      </div>
                    <% else %>
                      <span class="text-sm text-gray-400">Not rented</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to protected_device_path(device), class: "text-indigo-600 hover:text-indigo-900" do %>
                      View Details
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No devices</h3>
          <p class="mt-1 text-sm text-gray-500">No devices have been assigned to this type yet.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-center space-x-4">
    <%= link_to protected_device_types_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Device Types
    <% end %>

    <% if @device_type.devices.empty? %>
      <%= button_to protected_device_type_path(@device_type), method: :delete, data: { confirm: 'Are you sure you want to delete this device type?' }, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Type
      <% end %>
    <% end %>
  </div>
</div>
