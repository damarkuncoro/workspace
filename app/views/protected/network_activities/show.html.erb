<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
    <div class="flex flex-col justify-center gap-2">
      <h1 class="text-xl font-medium leading-none text-mono">
        Network Activity Details
      </h1>
      <div class="flex items-center gap-2 text-sm font-normal text-secondary-foreground">
        <%= @network_activity.event_type.titleize %>
      </div>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="grid gap-5 lg:gap-7.5">
    <!-- Activity Information -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title flex items-center gap-2">
          <i class="ki-filled ki-information text-lg"></i>
          Activity Information
        </h3>
      </div>
      <div class="kt-card-content">
        <div class="grid gap-4">
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Event Type</span>
            <div class="flex items-center gap-2">
              <% case @network_activity.event_type %>
              <% when 'link_up' %>
                <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                  <i class="ki-filled ki-check text-green-600 text-sm"></i>
                </div>
              <% when 'link_down' %>
                <div class="w-6 h-6 bg-destructive/10 rounded-full flex items-center justify-center">
                  <i class="ki-filled ki-cross text-destructive text-sm"></i>
                </div>
              <% else %>
                <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center">
                  <i class="ki-filled ki-information text-blue-600 text-sm"></i>
                </div>
              <% end %>
              <span class="kt-badge kt-badge-warning"><%= @network_activity.event_type.titleize %></span>
            </div>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Recorded At</span>
            <span class="text-sm text-mono bg-muted px-3 py-1 rounded"><%= @network_activity.recorded_at.strftime('%B %d, %Y %H:%M:%S') %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Activity ID</span>
            <span class="text-sm text-mono bg-muted px-3 py-1 rounded"><%= @network_activity.id.to_s.first(12) %>...</span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Created</span>
            <span class="text-sm text-foreground"><%= @network_activity.created_at.strftime('%B %d, %Y') %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Last Updated</span>
            <span class="text-sm text-foreground"><%= @network_activity.updated_at.strftime('%B %d, %Y') %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Entities -->
    <div class="grid gap-5 lg:gap-7.5">
      <!-- Network Info -->
      <% if @network_activity.network %>
        <div class="kt-card">
          <div class="kt-card-header">
            <h3 class="kt-card-title flex items-center gap-2">
              <i class="ki-filled ki-network text-lg"></i>
              Related Network
            </h3>
          </div>
          <div class="kt-card-content">
            <div class="grid gap-4">
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">Network Name</span>
                <span class="text-sm text-foreground"><%= @network_activity.network.name %></span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">Type</span>
                <span class="text-sm text-foreground"><%= @network_activity.network.kind.titleize %></span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">CIDR</span>
                <span class="text-sm text-mono"><%= @network_activity.network.cidr || 'N/A' %></span>
              </div>
            </div>
            <div class="kt-card-footer justify-center">
              <%= link_to protected_network_path(@network_activity.network), class: "kt-btn kt-btn-outline" do %>
                <i class="ki-filled ki-eye"></i>
                View Network Details
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Device Info -->
      <% if @network_activity.device %>
        <div class="kt-card">
          <div class="kt-card-header">
            <h3 class="kt-card-title flex items-center gap-2">
              <i class="ki-filled ki-devices text-lg"></i>
              Related Device
            </h3>
          </div>
          <div class="kt-card-content">
            <div class="grid gap-4">
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">Device Label</span>
                <span class="text-sm text-foreground"><%= @network_activity.device.label %></span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">Serial Number</span>
                <span class="text-sm text-mono"><%= @network_activity.device.serial_number %></span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">Type</span>
                <span class="text-sm text-foreground"><%= @network_activity.device.device_type.name %></span>
              </div>
            </div>
            <div class="kt-card-footer justify-center">
              <%= link_to protected_device_path(@network_activity.device), class: "kt-btn kt-btn-outline" do %>
                <i class="ki-filled ki-eye"></i>
                View Device Details
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Interface Info -->
      <% if @network_activity.device_interface %>
        <div class="kt-card">
          <div class="kt-card-header">
            <h3 class="kt-card-title flex items-center gap-2">
              <i class="ki-filled ki-interface text-lg"></i>
              Related Interface
            </h3>
          </div>
          <div class="kt-card-content">
            <div class="grid gap-4">
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">Interface Name</span>
                <span class="text-sm text-foreground"><%= @network_activity.device_interface.name %></span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">MAC Address</span>
                <span class="text-sm text-mono"><%= @network_activity.device_interface.mac %></span>
              </div>
              <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
                <span class="text-sm font-medium text-secondary-foreground">Link Type</span>
                <span class="text-sm text-foreground"><%= @network_activity.device_interface.link_type&.titleize || 'N/A' %></span>
              </div>
            </div>
            <div class="kt-card-footer justify-center">
              <%= link_to protected_device_interface_path(@network_activity.device_interface), class: "kt-btn kt-btn-outline" do %>
                <i class="ki-filled ki-eye"></i>
                View Interface Details
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <!-- Data Section -->
  <% if @network_activity.data.present? %>
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title flex items-center gap-2">
          <i class="ki-filled ki-data text-lg"></i>
          Activity Data
        </h3>
      </div>
      <div class="kt-card-content">
        <pre class="bg-muted p-4 rounded-lg text-sm text-foreground overflow-x-auto"><code><%= JSON.pretty_generate(@network_activity.data) %></code></pre>
      </div>
    </div>
  <% end %>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex justify-center gap-4">
    <%= link_to protected_network_activities_path, class: "kt-btn kt-btn-outline" do %>
      <i class="ki-filled ki-arrow-left"></i>
      Back to Activities
    <% end %>

    <%= button_to protected_network_activity_path(@network_activity), method: :delete, data: { confirm: 'Are you sure you want to delete this network activity?' }, class: "kt-btn kt-btn-destructive" do %>
      <i class="ki-filled ki-trash"></i>
      Delete Activity
    <% end %>
  </div>
</div>
<!-- End of Container -->