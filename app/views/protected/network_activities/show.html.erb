<div class="max-w-4xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-orange-600 to-red-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Network Activity Details</h1>
          <p class="text-orange-100 mt-1"><%= @network_activity.event_type.titleize %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Activity Information -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Basic Information -->
    <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Activity Information
        </h3>
      </div>
      <div class="px-6 py-5 space-y-4">
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Event Type</span>
          <div class="flex items-center">
            <% case @network_activity.event_type %>
            <% when 'link_up' %>
              <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mr-2">
                <svg class="w-3 h-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            <% when 'link_down' %>
              <div class="w-6 h-6 bg-red-100 rounded-full flex items-center justify-center mr-2">
                <svg class="w-3 h-3 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </div>
            <% else %>
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-2">
                <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            <% end %>
            <span class="text-sm font-semibold text-gray-900 bg-orange-50 px-3 py-1 rounded-lg"><%= @network_activity.event_type.titleize %></span>
          </div>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Recorded At</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-3 py-1 rounded-lg border"><%= @network_activity.recorded_at.strftime('%B %d, %Y %H:%M:%S') %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Activity ID</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-3 py-1 rounded-lg border"><%= @network_activity.id.to_s.first(12) %>...</span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Created</span>
          <span class="text-sm text-gray-900"><%= @network_activity.created_at.strftime('%B %d, %Y') %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Last Updated</span>
          <span class="text-sm text-gray-900"><%= @network_activity.updated_at.strftime('%B %d, %Y') %></span>
        </div>
      </div>
    </div>

    <!-- Related Entities -->
    <div class="space-y-6">
      <!-- Network Info -->
      <% if @network_activity.network %>
        <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
          <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0 9c-1.657 0-3-4.03-3-9s1.343-9 3-9m0 18c1.657 0 3-4.03 3-9s-1.343-9-3-9"></path>
              </svg>
              Related Network
            </h3>
          </div>
          <div class="px-6 py-5 space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">Network Name</span>
              <span class="text-sm text-gray-900"><%= @network_activity.network.name %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">Type</span>
              <span class="text-sm text-gray-900"><%= @network_activity.network.kind.titleize %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">CIDR</span>
              <span class="text-sm text-gray-900 font-mono"><%= @network_activity.network.cidr || 'N/A' %></span>
            </div>
            <div class="text-center mt-4">
              <%= link_to protected_network_path(@network_activity.network), class: "inline-flex items-center px-3 py-2 border border-blue-300 rounded-md shadow-sm text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                View Network Details
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Device Info -->
      <% if @network_activity.device %>
        <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
          <div class="bg-gradient-to-r from-green-50 to-green-100 px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
              </svg>
              Related Device
            </h3>
          </div>
          <div class="px-6 py-5 space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">Device Label</span>
              <span class="text-sm text-gray-900"><%= @network_activity.device.label %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">Serial Number</span>
              <span class="text-sm text-gray-900 font-mono"><%= @network_activity.device.serial_number %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">Type</span>
              <span class="text-sm text-gray-900"><%= @network_activity.device.device_type.name %></span>
            </div>
            <div class="text-center mt-4">
              <%= link_to protected_device_path(@network_activity.device), class: "inline-flex items-center px-3 py-2 border border-green-300 rounded-md shadow-sm text-sm font-medium text-green-700 bg-green-50 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                View Device Details
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Interface Info -->
      <% if @network_activity.device_interface %>
        <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
          <div class="bg-gradient-to-r from-teal-50 to-teal-100 px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Related Interface
            </h3>
          </div>
          <div class="px-6 py-5 space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">Interface Name</span>
              <span class="text-sm text-gray-900"><%= @network_activity.device_interface.name %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">MAC Address</span>
              <span class="text-sm text-gray-900 font-mono"><%= @network_activity.device_interface.mac %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600">Link Type</span>
              <span class="text-sm text-gray-900"><%= @network_activity.device_interface.link_type&.titleize || 'N/A' %></span>
            </div>
            <div class="text-center mt-4">
              <%= link_to protected_device_interface_path(@network_activity.device_interface), class: "inline-flex items-center px-3 py-2 border border-teal-300 rounded-md shadow-sm text-sm font-medium text-teal-700 bg-teal-50 hover:bg-teal-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" do %>
                View Interface Details
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Data Section -->
  <% if @network_activity.data.present? %>
    <div class="bg-white shadow-xl rounded-xl overflow-hidden mb-6 border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Activity Data
        </h3>
      </div>
      <div class="px-6 py-5">
        <pre class="bg-gray-100 p-4 rounded-lg text-sm text-gray-800 overflow-x-auto"><code><%= JSON.pretty_generate(@network_activity.data) %></code></pre>
      </div>
    </div>
  <% end %>

  <!-- Action Buttons -->
  <div class="flex justify-center space-x-4">
    <%= link_to protected_network_activities_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Activities
    <% end %>

    <%= button_to protected_network_activity_path(@network_activity), method: :delete, data: { confirm: 'Are you sure you want to delete this network activity?' }, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
      Delete Activity
    <% end %>
  </div>
</div>