<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
    <div class="flex flex-col justify-center gap-2">
      <h1 class="text-xl font-medium leading-none text-mono">
        Edit Network Activity
      </h1>
      <div class="flex items-center gap-2 text-sm font-normal text-secondary-foreground">
        <%= @network_activity.event_type.titleize %>
      </div>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="kt-card">
    <%= form_with model: @network_activity, url: protected_network_activity_path(@network_activity), method: :patch do |f| %>
      <div class="kt-card-content">
        <div class="grid gap-6">
          <!-- Network Selection -->
          <div>
            <%= f.label :network_id, "Network (Optional)", class: "form-label" %>
            <%= f.select :network_id, options_for_select(@networks.map { |n| ["#{n.name} (#{n.kind.titleize})", n.id] }, @network_activity.network_id), { include_blank: "Select network (optional)" }, { class: "kt-select" } %>
            <% if @network_activity.errors[:network_id].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_activity.errors[:network_id].first %></p>
            <% end %>
          </div>

          <!-- Device Selection -->
          <div>
            <%= f.label :device_id, "Device (Optional)", class: "form-label" %>
            <%= f.select :device_id, options_for_select(@devices.map { |d| ["#{d.label} (#{d.serial_number})", d.id] }, @network_activity.device_id), { include_blank: "Select device (optional)" }, { class: "kt-select" } %>
            <% if @network_activity.errors[:device_id].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_activity.errors[:device_id].first %></p>
            <% end %>
          </div>

          <!-- Device Interface Selection -->
          <div>
            <%= f.label :device_interface_id, "Device Interface (Optional)", class: "form-label" %>
            <%= f.select :device_interface_id, options_for_select(@network_activity.device&.device_interfaces&.map { |di| ["#{di.name} (#{di.mac})", di.id] } || []), { include_blank: "Select interface (optional)" }, { class: "kt-select" } %>
            <p class="mt-2 text-sm text-secondary-foreground">Leave blank if not applicable</p>
            <% if @network_activity.errors[:device_interface_id].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_activity.errors[:device_interface_id].first %></p>
            <% end %>
          </div>

          <!-- Event Type -->
          <div>
            <%= f.label :event_type, "Event Type", class: "form-label" %>
            <%= f.select :event_type, options_for_select([["DHCP Assigned", "dhcp_assigned"], ["Link Up", "link_up"], ["Link Down", "link_down"], ["IP Change", "ip_change"], ["Auth Fail", "auth_fail"], ["RSSI", "rssi"]], @network_activity.event_type), { include_blank: "Select event type" }, { required: true, class: "kt-select" } %>
            <% if @network_activity.errors[:event_type].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_activity.errors[:event_type].first %></p>
            <% end %>
          </div>

          <!-- Recorded At -->
          <div>
            <%= f.label :recorded_at, "Recorded At", class: "form-label" %>
            <%= f.datetime_local_field :recorded_at, required: true, class: "kt-input" %>
            <p class="mt-2 text-sm text-secondary-foreground">When did this event occur?</p>
            <% if @network_activity.errors[:recorded_at].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_activity.errors[:recorded_at].first %></p>
            <% end %>
          </div>

          <!-- Data -->
          <div>
            <%= f.label :data, "Additional Data (Optional)", class: "form-label" %>
            <%= f.text_area :data, rows: 4, class: "kt-input", placeholder: '{"ip_address": "192.168.1.100", "signal_strength": "-45dBm"}' %>
            <p class="mt-2 text-sm text-secondary-foreground">Optional JSON data for additional event information</p>
            <% if @network_activity.errors[:data].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network_activity.errors[:data].first %></p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="kt-card-footer justify-end gap-3">
        <%= link_to protected_network_activity_path(@network_activity), class: "kt-btn kt-btn-outline" do %>
          <i class="ki-filled ki-cross"></i>
          Cancel
        <% end %>
        <%= f.submit "Update Activity", class: "kt-btn kt-btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<!-- End of Container -->