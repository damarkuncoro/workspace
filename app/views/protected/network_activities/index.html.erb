<!-- Container -->
<div class="kt-container-fixed">
  <div class="grid gap-5 lg:gap-7.5">
    <!-- Filters Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Filters</h3>
      </div>
      <div class="kt-card-content">
        <%= form_with url: protected_network_activities_path, method: :get, class: "grid grid-cols-1 md:grid-cols-6 gap-4" do |f| %>
          <div>
            <%= f.label :network_id, "Network", class: "form-label" %>
            <%= f.select :network_id, options_for_select(@networks.map { |n| [n.name, n.id] }, params[:network_id]), { include_blank: "All Networks" }, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :device_id, "Device", class: "form-label" %>
            <%= f.select :device_id, options_for_select(@devices.map { |d| [d.label, d.id] }, params[:device_id]), { include_blank: "All Devices" }, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :device_interface_id, "Interface", class: "form-label" %>
            <%= f.select :device_interface_id, options_for_select([]), { include_blank: "All Interfaces" }, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :event_type, "Event Type", class: "form-label" %>
            <%= f.select :event_type, options_for_select([["All Types", ""], ["DHCP Assigned", "dhcp_assigned"], ["Link Up", "link_up"], ["Link Down", "link_down"], ["IP Change", "ip_change"], ["Auth Fail", "auth_fail"], ["RSSI", "rssi"]], params[:event_type]), {}, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :start_date, "From Date", class: "form-label" %>
            <%= f.date_field :start_date, value: params[:start_date], class: "kt-input" %>
          </div>
          <div>
            <%= f.label :end_date, "To Date", class: "form-label" %>
            <%= f.date_field :end_date, value: params[:end_date], class: "kt-input" %>
          </div>
          <div class="flex items-end md:col-span-6 gap-2">
            <%= f.submit "Apply Filters", class: "kt-btn kt-btn-primary" %>
            <%= link_to "Clear", protected_network_activities_path, class: "kt-btn kt-btn-outline" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Network Activities List Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Network Activities (<%= @network_activities.count %>)</h3>
      </div>
      <div class="kt-card-content">
        <% if @network_activities.any? %>
          <div class="kt-scrollable-x-auto">
            <table class="kt-table kt-table-border">
              <thead>
                <tr>
                  <th>Event Type</th>
                  <th>Network</th>
                  <th>Device</th>
                  <th>Interface</th>
                  <th>Recorded At</th>
                  <th class="w-[100px]">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @network_activities.each do |activity| %>
                  <tr>
                    <td>
                      <div class="flex items-center gap-3">
                        <% case activity.event_type %>
                        <% when 'link_up' %>
                          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                            <i class="ki-filled ki-check text-green-600"></i>
                          </div>
                        <% when 'link_down' %>
                          <div class="w-8 h-8 bg-destructive/10 rounded-full flex items-center justify-center">
                            <i class="ki-filled ki-cross text-destructive"></i>
                          </div>
                        <% else %>
                          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="ki-filled ki-information text-blue-600"></i>
                          </div>
                        <% end %>
                        <span class="text-sm font-medium text-foreground"><%= activity.event_type.titleize %></span>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm font-medium text-mono">
                        <%= activity.network&.name || 'N/A' %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= activity.network&.kind&.titleize || '' %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm font-medium text-mono">
                        <%= activity.device&.label || 'N/A' %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= activity.device&.serial_number || '' %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm text-foreground">
                        <%= activity.device_interface&.name || 'N/A' %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= activity.device_interface&.mac || '' %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm text-foreground">
                        <%= activity.recorded_at.strftime('%B %d, %Y') %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= activity.recorded_at.strftime('%H:%M:%S') %>
                      </div>
                    </td>
                    <td>
                      <%= link_to protected_network_activity_path(activity), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                        <i class="ki-filled ki-eye"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="kt-card-footer justify-center">
            <%= pagy_nav(@pagy) %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="flex flex-col items-center gap-4">
              <i class="ki-filled ki-time-past text-4xl text-muted-foreground"></i>
              <h3 class="text-lg font-medium text-foreground">No network activities</h3>
              <p class="text-sm text-secondary-foreground">No network activities have been recorded yet.</p>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>