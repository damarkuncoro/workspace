<div class="max-w-7xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-orange-600 to-red-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Network Activities</h1>
          <p class="text-orange-100 mt-1">Monitor network events and activities</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Filters</h3>
    </div>
    <div class="px-6 py-4">
      <%= form_with url: protected_network_activities_path, method: :get, class: "grid grid-cols-1 md:grid-cols-6 gap-4" do |f| %>
        <div>
          <%= f.label :network_id, "Network", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :network_id, options_for_select(@networks.map { |n| [n.name, n.id] }, params[:network_id]), { include_blank: "All Networks" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :device_id, "Device", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :device_id, options_for_select(@devices.map { |d| [d.label, d.id] }, params[:device_id]), { include_blank: "All Devices" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :device_interface_id, "Interface", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :device_interface_id, options_for_select([]), { include_blank: "All Interfaces" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :event_type, "Event Type", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :event_type, options_for_select([["All Types", ""], ["DHCP Assigned", "dhcp_assigned"], ["Link Up", "link_up"], ["Link Down", "link_down"], ["IP Change", "ip_change"], ["Auth Fail", "auth_fail"], ["RSSI", "rssi"]], params[:event_type]), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :start_date, "From Date", class: "block text-sm font-medium text-gray-700" %>
          <%= f.date_field :start_date, value: params[:start_date], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :end_date, "To Date", class: "block text-sm font-medium text-gray-700" %>
          <%= f.date_field :end_date, value: params[:end_date], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div class="flex items-end md:col-span-6">
          <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= link_to "Clear", protected_network_activities_path, class: "ml-2 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Network Activities List -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Network Activities (<%= @network_activities.count %>)</h3>
    </div>
    <div class="px-6 py-4">
      <% if @network_activities.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Event Type
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Network
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Device
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Interface
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Recorded At
                </th>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @network_activities.each do |activity| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <% case activity.event_type %>
                      <% when 'link_up' %>
                        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
                          <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                          </svg>
                        </div>
                      <% when 'link_down' %>
                        <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center mr-3">
                          <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                          </svg>
                        </div>
                      <% else %>
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                          <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                        </div>
                      <% end %>
                      <span class="text-sm font-medium text-gray-900"><%= activity.event_type.titleize %></span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= activity.network&.name || 'N/A' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= activity.network&.kind&.titleize || '' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= activity.device&.label || 'N/A' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= activity.device&.serial_number || '' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= activity.device_interface&.name || 'N/A' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= activity.device_interface&.mac || '' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= activity.recorded_at.strftime('%B %d, %Y') %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= activity.recorded_at.strftime('%H:%M:%S') %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to protected_network_activity_path(activity), class: "text-indigo-600 hover:text-indigo-900" do %>
                      View Details
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-6">
          <%= pagy_nav(@pagy) %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No network activities</h3>
          <p class="mt-1 text-sm text-gray-500">No network activities have been recorded yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>