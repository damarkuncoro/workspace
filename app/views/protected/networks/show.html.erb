<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
    <div class="flex flex-col justify-center gap-2">
      <h1 class="text-xl font-medium leading-none text-mono">
        Network Details
      </h1>
      <div class="flex items-center gap-2 text-sm font-normal text-secondary-foreground">
        <%= @network.name %>
      </div>
    </div>
    <div class="flex items-center gap-2.5">
      <%= link_to edit_protected_network_path(@network), class: "kt-btn kt-btn-outline" do %>
        <i class="ki-filled ki-pencil"></i>
        Edit Network
      <% end %>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="grid gap-5 lg:gap-7.5">
    <!-- Network Information -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title flex items-center gap-2">
          <i class="ki-filled ki-information text-lg"></i>
          Network Information
        </h3>
      </div>
      <div class="kt-card-content">
        <div class="grid gap-4">
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Network Name</span>
            <span class="kt-badge kt-badge-primary"><%= @network.name %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Type</span>
            <span class="kt-badge kt-badge-primary"><%= @network.kind.titleize %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">CIDR</span>
            <span class="text-sm text-mono bg-muted px-3 py-1 rounded"><%= @network.cidr || 'N/A' %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Location</span>
            <span class="text-sm text-foreground"><%= @network.location || 'N/A' %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Created</span>
            <span class="text-sm text-foreground"><%= @network.created_at.strftime('%B %d, %Y') %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground">Last Updated</span>
            <span class="text-sm text-foreground"><%= @network.updated_at.strftime('%B %d, %Y') %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistics -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title flex items-center gap-2">
          <i class="ki-filled ki-chart-line text-lg"></i>
          Network Statistics
        </h3>
      </div>
      <div class="kt-card-content">
        <div class="grid gap-4">
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground flex items-center gap-2">
              <div class="w-3 h-3 bg-muted-foreground rounded-full"></div>
              Total Devices
            </span>
            <span class="text-lg font-bold text-foreground"><%= @network.devices.count %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground flex items-center gap-2">
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              Connected Devices
            </span>
            <span class="text-lg font-bold text-green-600"><%= @network_devices.select { |nd| nd.connected? }.count %></span>
          </div>
          <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
            <span class="text-sm font-medium text-secondary-foreground flex items-center gap-2">
              <div class="w-3 h-3 bg-destructive rounded-full"></div>
              Disconnected Devices
            </span>
            <span class="text-lg font-bold text-destructive"><%= @network_devices.select { |nd| nd.disconnected? }.count %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <!-- Connected Devices -->
  <div class="kt-card">
    <div class="kt-card-header">
      <h3 class="kt-card-title flex items-center gap-2">
        <i class="ki-filled ki-devices text-lg"></i>
        Connected Devices
      </h3>
    </div>
    <div class="kt-card-content">
      <% if @network_devices.any? %>
        <div class="kt-scrollable-x-auto">
          <table class="kt-table kt-table-border">
            <thead>
              <tr>
                <th>Device</th>
                <th>Interface</th>
                <th>IP Address</th>
                <th>Status</th>
                <th>Connected At</th>
                <th class="w-[100px]">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @network_devices.each do |network_device| %>
                <tr>
                  <td>
                    <div class="text-sm font-medium text-mono">
                      <%= network_device.device.label %>
                    </div>
                    <div class="text-sm text-secondary-foreground">
                      <%= network_device.device.serial_number %>
                    </div>
                  </td>
                  <td>
                    <div class="text-sm text-foreground">
                      <%= network_device.device_interface&.name || 'N/A' %>
                    </div>
                    <div class="text-sm text-secondary-foreground">
                      <%= network_device.device_interface&.mac || '' %>
                    </div>
                  </td>
                  <td>
                    <div class="text-sm text-mono">
                      <%= network_device.ip_address || 'N/A' %>
                    </div>
                  </td>
                  <td>
                    <% if network_device.connected? %>
                      <span class="kt-badge kt-badge-success">Connected</span>
                    <% else %>
                      <span class="kt-badge kt-badge-destructive">Disconnected</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="text-sm text-foreground">
                      <%= network_device.connected_at&.strftime('%B %d, %Y %H:%M') || 'N/A' %>
                    </div>
                  </td>
                  <td>
                    <%= link_to protected_network_device_path(network_device), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                      <i class="ki-filled ki-eye"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="flex flex-col items-center gap-4">
            <i class="ki-filled ki-devices text-4xl text-muted-foreground"></i>
            <h3 class="text-lg font-medium text-foreground">No devices connected</h3>
            <p class="text-sm text-secondary-foreground">No devices are currently connected to this network.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <!-- Recent Activities -->
  <div class="kt-card">
    <div class="kt-card-header">
      <h3 class="kt-card-title flex items-center gap-2">
        <i class="ki-filled ki-time-past text-lg"></i>
        Recent Activities
      </h3>
    </div>
    <div class="kt-card-content">
      <% if @network_activities.any? %>
        <div class="grid gap-4">
          <% @network_activities.each do |activity| %>
            <div class="flex items-center justify-between py-3 px-4 bg-accent/50 rounded-lg">
              <div class="flex items-center gap-4">
                <div class="flex-shrink-0">
                  <% case activity.event_type %>
                  <% when 'link_up' %>
                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                      <i class="ki-filled ki-check text-green-600"></i>
                    </div>
                  <% when 'link_down' %>
                    <div class="w-8 h-8 bg-destructive/10 rounded-full flex items-center justify-center">
                      <i class="ki-filled ki-cross text-destructive"></i>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                      <i class="ki-filled ki-information text-blue-600"></i>
                    </div>
                  <% end %>
                </div>
                <div>
                  <div class="text-sm font-medium text-foreground">
                    <%= activity.event_type.titleize %>
                  </div>
                  <div class="text-sm text-secondary-foreground">
                    <%= activity.device&.label || 'Unknown Device' %> â€¢ <%= activity.recorded_at.strftime('%B %d, %Y %H:%M') %>
                  </div>
                </div>
              </div>
              <div>
                <%= link_to protected_network_activity_path(activity), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                  <i class="ki-filled ki-eye"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="flex flex-col items-center gap-4">
            <i class="ki-filled ki-time-past text-4xl text-muted-foreground"></i>
            <h3 class="text-lg font-medium text-foreground">No recent activities</h3>
            <p class="text-sm text-secondary-foreground">No network activities have been recorded yet.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex justify-center gap-4">
    <%= link_to protected_networks_path, class: "kt-btn kt-btn-outline" do %>
      <i class="ki-filled ki-arrow-left"></i>
      Back to Networks
    <% end %>

    <% if @network.network_devices.empty? %>
      <%= button_to protected_network_path(@network), method: :delete, data: { confirm: 'Are you sure you want to delete this network?' }, class: "kt-btn kt-btn-destructive" do %>
        <i class="ki-filled ki-trash"></i>
        Delete Network
      <% end %>
    <% end %>
  </div>
</div>
<!-- End of Container -->