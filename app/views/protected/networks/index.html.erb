<!-- Container -->
<div class="kt-container-fixed">
  <div class="grid gap-5 lg:gap-7.5">
    <!-- Filters Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Filters</h3>
      </div>
      <div class="kt-card-content">
        <%= form_with url: protected_networks_path, method: :get, class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |f| %>
          <div>
            <%= f.label :kind, "Network Type", class: "form-label" %>
            <%= f.select :kind, options_for_select([["All Types", ""], ["LAN", "lan"], ["WiFi", "wifi"], ["VPN", "vpn"], ["WAN", "wan"]], params[:kind]), {}, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :search, "Search", class: "form-label" %>
            <%= f.text_field :search, value: params[:search], placeholder: "Name or location", class: "kt-input" %>
          </div>
          <div class="flex items-end gap-2">
            <%= f.submit "Apply Filters", class: "kt-btn kt-btn-primary" %>
            <%= link_to "Clear", protected_networks_path, class: "kt-btn kt-btn-outline" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Networks List Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Networks (<%= @networks.count %>)</h3>
      </div>
      <div class="kt-card-content">
        <% if @networks.any? %>
          <div class="kt-scrollable-x-auto">
            <table class="kt-table kt-table-border">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Type</th>
                  <th>CIDR</th>
                  <th>Location</th>
                  <th>Devices</th>
                  <th class="w-[100px]">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @networks.each do |network| %>
                  <tr>
                    <td>
                      <div class="text-sm font-medium text-mono">
                        <%= network.name %>
                      </div>
                    </td>
                    <td>
                      <span class="kt-badge kt-badge-primary">
                        <%= network.kind.titleize %>
                      </span>
                    </td>
                    <td>
                      <div class="text-sm text-mono">
                        <%= network.cidr || 'N/A' %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm text-foreground">
                        <%= network.location || 'N/A' %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm text-foreground">
                        <%= network.devices.count %>
                      </div>
                    </td>
                    <td>
                      <div class="flex gap-2">
                        <%= link_to protected_network_path(network), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                          <i class="ki-filled ki-eye"></i>
                        <% end %>
                        <%= link_to edit_protected_network_path(network), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                          <i class="ki-filled ki-pencil"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="kt-card-footer justify-center">
            <%= pagy_nav(@pagy) %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="flex flex-col items-center gap-4">
              <i class="ki-filled ki-network text-4xl text-muted-foreground"></i>
              <h3 class="text-lg font-medium text-foreground">No networks</h3>
              <p class="text-sm text-secondary-foreground">Get started by creating a new network.</p>
              <%= link_to new_protected_network_path, class: "kt-btn kt-btn-primary" do %>
                <i class="ki-filled ki-plus"></i>
                Add Network
              <% end %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>