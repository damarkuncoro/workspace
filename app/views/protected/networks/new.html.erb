<!-- Container -->
<div class="kt-container-fixed">
  <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
    <div class="flex flex-col justify-center gap-2">
      <h1 class="text-xl font-medium leading-none text-mono">
        Add New Network
      </h1>
      <div class="flex items-center gap-2 text-sm font-normal text-secondary-foreground">
        Create a new network configuration
      </div>
    </div>
  </div>
</div>
<!-- End of Container -->

<!-- Container -->
<div class="kt-container-fixed">
  <div class="kt-card">
    <%= form_with model: @network, url: protected_networks_path do |f| %>
      <div class="kt-card-content">
        <div class="grid gap-6">
          <!-- Network Name -->
          <div>
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, required: true, class: "kt-input", placeholder: "e.g., Office LAN" %>
            <% if @network.errors[:name].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network.errors[:name].first %></p>
            <% end %>
          </div>

          <!-- Network Type -->
          <div>
            <%= f.label :kind, "Network Type", class: "form-label" %>
            <%= f.select :kind, options_for_select([["LAN", "lan"], ["WiFi", "wifi"], ["VPN", "vpn"], ["WAN", "wan"]]), { include_blank: "Select network type" }, { required: true, class: "kt-select" } %>
            <% if @network.errors[:kind].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network.errors[:kind].first %></p>
            <% end %>
          </div>

          <!-- CIDR -->
          <div>
            <%= f.label :cidr, class: "form-label" %>
            <%= f.text_field :cidr, class: "kt-input", placeholder: "e.g., 192.168.1.0/24" %>
            <p class="mt-2 text-sm text-secondary-foreground">Optional CIDR notation for the network range</p>
            <% if @network.errors[:cidr].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network.errors[:cidr].first %></p>
            <% end %>
          </div>

          <!-- Location -->
          <div>
            <%= f.label :location, class: "form-label" %>
            <%= f.text_field :location, class: "kt-input", placeholder: "e.g., Main Office, Floor 1" %>
            <p class="mt-2 text-sm text-secondary-foreground">Optional location description</p>
            <% if @network.errors[:location].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network.errors[:location].first %></p>
            <% end %>
          </div>

          <!-- Metadata -->
          <div>
            <%= f.label :metadata, class: "form-label" %>
            <%= f.text_area :metadata, rows: 4, class: "kt-input", placeholder: '{"key": "value"}' %>
            <p class="mt-2 text-sm text-secondary-foreground">Optional JSON metadata for additional configuration</p>
            <% if @network.errors[:metadata].any? %>
              <p class="mt-2 text-sm text-destructive"><%= @network.errors[:metadata].first %></p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="kt-card-footer justify-end gap-3">
        <%= link_to protected_networks_path, class: "kt-btn kt-btn-outline" do %>
          <i class="ki-filled ki-cross"></i>
          Cancel
        <% end %>
        <%= f.submit "Create Network", class: "kt-btn kt-btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<!-- End of Container -->