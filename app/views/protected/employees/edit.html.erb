<%= render 'protected/shared/partials/page_header',
  title: 'Edit Employee',
  subtitle: 'Update employee information' %>

<%= render 'protected/employees/partials/edit_form' %>

<%= render 'protected/shared/partials/page_actions',
  card: false,
  justify: 'justify-center',
  links: [
    link_to(protected_employee_path(@employee), class: "kt-btn kt-btn-outline") do
      raw('<i class="ki-filled ki-eye"></i> View Employee')
    end,
    link_to(protected_employees_path, class: "kt-btn kt-btn-outline") do
      raw('<i class="ki-filled ki-arrow-left"></i> Back to Employees')
    end
  ] %>