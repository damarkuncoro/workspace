<%= form_with(model: [:protected, employee], local: true, class: "space-y-6") do |form| %>
  <% if employee.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% employee.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Employee Information -->
  <div class="bg-gray-50 p-4 rounded-lg">
    <h3 class="text-sm font-medium text-gray-900 mb-4">Employee Information</h3>
    <div class="grid grid-cols-1 gap-4">
      <div>
        <label for="employee_employee_code" class="block text-sm font-medium text-gray-700">
          Employee Code
        </label>
        <div class="mt-1">
          <input type="text" value="<%= employee.employee_code %>" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100 text-gray-500 cursor-not-allowed" readonly>
        </div>
        <p class="mt-1 text-sm text-gray-500">Employee code is automatically generated and cannot be changed.</p>
      </div>
    </div>
  </div>

  <!-- Account Information -->
  <div class="bg-gray-50 p-4 rounded-lg">
    <h3 class="text-sm font-medium text-gray-900 mb-4">Account Information</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Account Email</label>
        <div class="mt-1">
          <input type="email" value="<%= employee.account_email %>" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100 text-gray-500 cursor-not-allowed" readonly>
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Account ID</label>
        <div class="mt-1">
          <input type="text" value="<%= employee.person.account_id %>" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100 text-gray-500 cursor-not-allowed" readonly>
        </div>
      </div>
    </div>
  </div>

  <!-- Status Settings -->
  <div>
    <label for="employee_status" class="block text-sm font-medium text-gray-700">
      Status <span class="text-red-500">*</span>
    </label>
    <div class="mt-1">
      <%= form.select :status,
          [['Active', 'active'], ['Inactive', 'inactive']],
          { include_blank: false },
          class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <p class="mt-1 text-sm text-gray-500">Set the employee's account status. Inactive employees cannot access the system.</p>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to protected_employees_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
      Cancel
    <% end %>

    <%= form.submit "Update Employee",
        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
        data: { disable_with: "Updating..." } %>
  </div>
<% end %>