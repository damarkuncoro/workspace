<%#
  View: Role Show
  Tujuan: Menampilkan detail role menggunakan KT card + info rows.
<% end %>

<%= render 'protected/shared/partials/page_header',
  title: 'Role Details',
  subtitle: (defined?(@role) && @role.respond_to?(:name) ? @role.name : @role.try(:title) || @role.try(:id)) %>

<%= kt_grid(cols: 1) do %>
  <%= kt_column(span: 1) do %>
    <%= kt_card do %>
      <%= kt_card_header(title: 'Role Info') %>
      <%= kt_card_content do %>
        <div class="grid gap-4 md:grid-cols-2">
          <div class="grid gap-3">
            <div>
              <label class="text-sm text-muted-foreground">ID</label>
              <div class="text-sm text-foreground"><%= @role.try(:id) %></div>
            </div>
            <div>
              <label class="text-sm text-muted-foreground">Created At</label>
              <div class="text-sm text-foreground"><%= (@role.respond_to?(:created_at) && @role.created_at) ? l(@role.created_at) : '-' %></div>
            </div>
          </div>
          <div class="grid gap-3">
            <div>
              <label class="text-sm text-muted-foreground">Updated At</label>
              <div class="text-sm text-foreground"><%= (@role.respond_to?(:updated_at) && @role.updated_at) ? l(@role.updated_at) : '-' %></div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="flex gap-2 mt-6">
  <% if @role.respond_to?(:persisted?) && @role.persisted? %>
    <%= link_to send(:edit_protected_role_path, @role), class: 'kt-btn kt-btn-warning' do %>
      <i class="ki-filled ki-pencil"></i>
      Edit
    <% end %>
  <% end %>
  <%= link_to send(:protected_roles_path), class: 'kt-btn kt-btn-outline' do %>
    <i class="ki-filled ki-arrow-left"></i>
    Back to Roles
  <% end %>
</div>