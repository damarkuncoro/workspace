<%# Form Issue untuk Employee (Tailwind) %>
<%# Polymorphic path: [:protected, @employee, issue] memastikan routing namespaces benar %>
<%= form_with(model: [:protected, @employee, issue], local: true) do |form| %>
  <% if issue.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <h4 class="text-sm font-semibold text-red-800"><%= pluralize(issue.errors.count, 'error') %> prohibited this issue from being saved:</h4>
      <ul class="mt-2 list-disc pl-5 text-sm text-red-700">
        <% issue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= kt_content_grid(cols: 1, gap: 'gap-6') do %>
    <div>
      <%= form.label :title, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :title, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' %>
    </div>

    <div>
      <%= form.label :description, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_area :description, rows: 4, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' %>
    </div>

    <div>
      <%= form.label :status, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.select :status, Issue.statuses.keys.map { |k| [k.humanize, k] }, {}, class: 'mt-1 block w-full rounded-md border-gray-300 bg-white py-2 pl-3 pr-10 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500' %>
    </div>

    <div>
      <%= form.label :priority, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.select :priority, Issue.priorities.keys.map { |k| [k.humanize, k] }, {}, class: 'mt-1 block w-full rounded-md border-gray-300 bg-white py-2 pl-3 pr-10 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500' %>
    </div>

    <div>
      <%= form.label :assigned_to_id, 'Primary Assigned To', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.collection_select :assigned_to_id, Account.joins(person: :employee).where(employees: { status: 'active' }).includes(:person), :id, :person_name, { include_blank: 'Unassigned' }, class: 'mt-1 block w-full rounded-md border-gray-300 bg-white py-2 pl-3 pr-10 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500' %>
    </div>

    <div>
      <%= form.label :assigned_account_ids, 'Additional Assignees', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.collection_select :assigned_account_ids, Account.joins(person: :employee).where(employees: { status: 'active' }).includes(:person), :id, :person_name, { selected: @issue&.assigned_accounts&.pluck(:id) }, { multiple: true, class: 'mt-1 block w-full rounded-md border-gray-300 bg-white py-2 pl-3 pr-10 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500' } %>
    </div>

    <div>
      <%= form.submit 'Save Issue', class: 'inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700' %>
    </div>
  <% end %>
<% end %>