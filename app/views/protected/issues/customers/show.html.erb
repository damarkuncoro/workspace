
<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @issue.title %></h1>
    <nav class="text-sm text-gray-600">
      <%= link_to 'Dashboard', protected_dashboard_path, class: 'hover:text-blue-600' %> >
      <%= link_to 'Customers', customers_path, class: 'hover:text-blue-600' %> >
      <%= link_to @customer.person&.name || @customer.customer_code, customer_path(@customer), class: 'hover:text-blue-600' %> >
      Issues >
      <%= @issue.title %> WKWKWKK
    </nav>
  </div>

  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Issue Details -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Issue Details</h2>

        <div class="grid md:grid-cols-2 gap-4 mb-4">
          <div>
            <p class="text-sm text-gray-600">Status</p>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @issue.open? ? 'bg-green-100 text-green-800' : @issue.in_progress? ? 'bg-yellow-100 text-yellow-800' : @issue.completed? ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @issue.status&.humanize || 'Unknown' %>
            </span>
          </div>
          <div>
            <p class="text-sm text-gray-600">Priority</p>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @issue.high? ? 'bg-red-100 text-red-800' : @issue.medium? ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800' %>">
              <%= @issue.priority&.humanize || 'Unknown' %>
            </span>
          </div>
          <div>
            <p class="text-sm text-gray-600">Primary Assigned To</p>
            <p class="font-medium"><%= @issue.assigned_to&.person&.name || 'Unassigned' %></p>
          </div>
          <% if @issue.assigned_accounts.any? %>
            <div>
              <p class="text-sm text-gray-600">Additional Assignees</p>
              <p class="font-medium"><%= @issue.assigned_accounts.map { |account| account.person&.name }.compact.join(', ') %></p>
            </div>
          <% end %>
          <div>
            <p class="text-sm text-gray-600">Created At</p>
            <p class="font-medium"><%= l(@issue.created_at) %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600">Updated At</p>
            <p class="font-medium"><%= l(@issue.updated_at) %></p>
          </div>
        </div>

        <div>
          <p class="text-sm text-gray-600 mb-2">Description</p>
          <div class="bg-gray-50 rounded-lg p-4">
            <%= @issue.description || 'No description provided.' %>
          </div>
        </div>
      </div>



      <!-- Comments Section -->
      <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Comments</h3>

        <% if @issue.issue_comments.any? %>
          <div class="space-y-4 mb-6">
            <% @issue.issue_comments.each do |comment| %>
              <div class="border-l-4 border-blue-500 pl-4">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center">
                    <span class="font-medium text-gray-900"><%= comment.account.person&.name || comment.account.email %></span>
                    <% if comment.internal? %>
                      <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                        Internal
                      </span>
                    <% end %>
                  </div>
                  <span class="text-sm text-gray-500"><%= l(comment.created_at) %></span>
                </div>
                <div class="text-gray-700">
                  <%= comment.content %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 mb-6">No comments yet.</p>
        <% end %>

        <!-- Add Comment Form -->
        <%= form_with model: [@customer, @issue, @issue_comment], url: customer_issue_comments_path(@customer, @issue), local: true, class: 'space-y-4' do |f| %>
          <div>
            <%= f.label :content, 'Add Comment', class: 'block text-sm font-medium text-gray-700 mb-2' %>
            <%= f.text_area :content, rows: 3, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', placeholder: 'Write your comment here...' %>
          </div>
          <div class="flex items-center">
            <%= f.check_box :internal, class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded' %>
            <%= f.label :internal, 'Internal comment (visible only to staff)', class: 'ml-2 block text-sm text-gray-900' %>
          </div>
          <div>
            <%= f.submit 'Add Comment', class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-300' %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Activity Timeline -->
    <div>
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Activity Timeline</h3>

        <% if @issue.issue_activities.any? %>
          <div class="space-y-4">
            <% @issue.issue_activities.order(created_at: :desc).each do |activity| %>
              <div class="flex">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                  </div>
                </div>
                <div class="ml-3 flex-1">
                  <p class="text-sm text-gray-900">
                    <%= activity.description %>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= l(activity.created_at) %>
                    <% if activity.account %>
                      by <%= activity.account.person&.name || activity.account.email %>
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No activities recorded yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="mt-6 flex flex-wrap gap-4">
    <%= link_to 'Edit Issue', edit_customer_issue_path(@customer, @issue), class: 'bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded-md transition duration-300' %>
    <%= link_to 'Back to Issues', customer_issues_path(@customer), class: 'bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition duration-300' %>
    <%= link_to 'Back to Customer', customer_path(@customer), class: 'bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition duration-300' %>
  </div>
</div>