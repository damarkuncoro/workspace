<%#
  View: Customers Show
  Tujuan: Menampilkan detail customers menggunakan KT card + info rows.
<% end %>

<%= render 'protected/shared/partials/page_header',
  title: 'Customers Details',
  subtitle: (defined?(@issues_customer) && @issues_customer.respond_to?(:name) ? @issues_customer.name : @issues_customer.try(:title) || @issues_customer.try(:id)) %>

<%= kt_grid(cols: 1) do %>
  <%= kt_column(span: 1) do %>
    <%= kt_card do %>
      <%= kt_card_header(title: 'Customers Info') %>
      <%= kt_card_content do %>
        <div class="grid gap-4 md:grid-cols-2">
          <div class="grid gap-3">
            <div>
              <label class="text-sm text-muted-foreground">ID</label>
              <div class="text-sm text-foreground"><%= @issues_customer.try(:id) %></div>
            </div>
            <div>
              <label class="text-sm text-muted-foreground">Created At</label>
              <div class="text-sm text-foreground"><%= (@issues_customer.respond_to?(:created_at) && @issues_customer.created_at) ? l(@issues_customer.created_at) : '-' %></div>
            </div>
          </div>
          <div class="grid gap-3">
            <div>
              <label class="text-sm text-muted-foreground">Updated At</label>
              <div class="text-sm text-foreground"><%= (@issues_customer.respond_to?(:updated_at) && @issues_customer.updated_at) ? l(@issues_customer.updated_at) : '-' %></div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="flex gap-2 mt-6">
  <% if @issues_customer.respond_to?(:persisted?) && @issues_customer.persisted? %>
    <%= link_to send(:edit_protected_issues_customer_path, @issues_customer), class: 'kt-btn kt-btn-warning' do %>
      <i class="ki-filled ki-pencil"></i>
      Edit
    <% end %>
  <% end %>
  <%= link_to send(:protected_issues_customers_path), class: 'kt-btn kt-btn-outline' do %>
    <i class="ki-filled ki-arrow-left"></i>
    Back to Customers
  <% end %>
</div>