<div class="max-w-6xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-green-600 to-teal-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Device Interface Details</h1>
          <p class="text-green-100 mt-1"><%= @device_interface.name %> on <%= @device_interface.device.label %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_protected_device_interface_path(@device_interface), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-white bg-opacity-20 hover:bg-opacity-30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Interface
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Interface Information -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Basic Information -->
    <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Interface Information
        </h3>
      </div>
      <div class="px-6 py-5 space-y-4">
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Device</span>
          <span class="text-sm font-semibold text-gray-900 bg-green-50 px-3 py-1 rounded-lg"><%= @device_interface.device.label %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Interface Name</span>
          <span class="text-sm font-semibold text-gray-900 bg-green-50 px-3 py-1 rounded-lg"><%= @device_interface.name %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">MAC Address</span>
          <span class="text-sm text-gray-900 font-mono bg-gray-100 px-3 py-1 rounded-lg border"><%= @device_interface.mac %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Link Type</span>
          <span class="text-sm font-semibold text-gray-900 bg-green-50 px-3 py-1 rounded-lg"><%= @device_interface.link_type&.titleize || 'N/A' %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Created</span>
          <span class="text-sm text-gray-900"><%= @device_interface.created_at.strftime('%B %d, %Y') %></span>
        </div>
        <div class="flex justify-between items-center py-2">
          <span class="text-sm font-medium text-gray-600">Last Updated</span>
          <span class="text-sm text-gray-900"><%= @device_interface.updated_at.strftime('%B %d, %Y') %></span>
        </div>
      </div>
    </div>

    <!-- Statistics -->
    <div class="bg-white shadow-xl rounded-xl overflow-hidden border border-gray-100">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Network Statistics
        </h3>
      </div>
      <div class="px-6 py-5 space-y-4">
        <div class="flex justify-between items-center py-3 px-4 bg-gray-50 rounded-lg">
          <span class="text-sm font-medium text-gray-600 flex items-center">
            <div class="w-3 h-3 bg-gray-400 rounded-full mr-2"></div>
            Connected Networks
          </span>
          <span class="text-lg font-bold text-gray-900"><%= @network_devices.count %></span>
        </div>
        <div class="flex justify-between items-center py-3 px-4 bg-green-50 rounded-lg">
          <span class="text-sm font-medium text-gray-600 flex items-center">
            <div class="w-3 h-3 bg-green-400 rounded-full mr-2"></div>
            Active Connections
          </span>
          <span class="text-lg font-bold text-green-700"><%= @network_devices.select { |nd| nd.connected? }.count %></span>
        </div>
        <div class="flex justify-between items-center py-3 px-4 bg-red-50 rounded-lg">
          <span class="text-sm font-medium text-gray-600 flex items-center">
            <div class="w-3 h-3 bg-red-400 rounded-full mr-2"></div>
            Disconnected
          </span>
          <span class="text-lg font-bold text-red-700"><%= @network_devices.select { |nd| nd.disconnected? }.count %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Connected Networks -->
  <div class="bg-white shadow-xl rounded-xl overflow-hidden mb-6 border border-gray-100">
    <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        Connected Networks
      </h3>
    </div>
    <div class="px-6 py-4">
      <% if @network_devices.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Network
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  IP Address
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Connected At
                </th>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @network_devices.each do |network_device| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= network_device.network.name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= network_device.network.kind.titleize %> • <%= network_device.network.location || 'No location' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900 font-mono">
                      <%= network_device.ip_address || 'N/A' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if network_device.connected? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Connected
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Disconnected
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= network_device.connected_at&.strftime('%B %d, %Y %H:%M') || 'N/A' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to protected_network_device_path(network_device), class: "text-indigo-600 hover:text-indigo-900" do %>
                      View Details
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No network connections</h3>
          <p class="mt-1 text-sm text-gray-500">This interface is not connected to any networks yet.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Activities -->
  <div class="bg-white shadow-xl rounded-xl overflow-hidden mb-6 border border-gray-100">
    <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-5 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Recent Activities
      </h3>
    </div>
    <div class="px-6 py-4">
      <% if @network_activities.any? %>
        <div class="space-y-4">
          <% @network_activities.each do |activity| %>
            <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-lg">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <% case activity.event_type %>
                  <% when 'link_up' %>
                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                  <% when 'link_down' %>
                    <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= activity.event_type.titleize %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= activity.network&.name || 'Unknown Network' %> • <%= activity.recorded_at.strftime('%B %d, %Y %H:%M') %>
                  </div>
                </div>
              </div>
              <div class="text-sm text-gray-500">
                <%= link_to protected_network_activity_path(activity), class: "text-indigo-600 hover:text-indigo-900" do %>
                  View Details
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No recent activities</h3>
          <p class="mt-1 text-sm text-gray-500">No network activities have been recorded for this interface yet.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-center space-x-4">
    <%= link_to protected_device_interfaces_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Interfaces
    <% end %>

    <% if @device_interface.network_devices.empty? %>
      <%= button_to protected_device_interface_path(@device_interface), method: :delete, data: { confirm: 'Are you sure you want to delete this device interface?' }, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Interface
      <% end %>
    <% end %>
  </div>
</div>