<!-- Container -->
<div class="kt-container-fixed">
  <div class="grid gap-5 lg:gap-7.5">
    <!-- Filters Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Filters</h3>
      </div>
      <div class="kt-card-content">
        <%= form_with url: protected_device_interfaces_path, method: :get, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |f| %>
          <div>
            <%= f.label :device_id, "Device", class: "form-label" %>
            <%= f.select :device_id, options_for_select(@devices.map { |d| [d.label, d.id] }, params[:device_id]), { include_blank: "All Devices" }, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :link_type, "Link Type", class: "form-label" %>
            <%= f.select :link_type, options_for_select([["All Types", ""], ["Ethernet", "ethernet"], ["WiFi", "wifi"], ["Virtual", "virtual"]], params[:link_type]), {}, class: "kt-select" %>
          </div>
          <div>
            <%= f.label :search, "Search", class: "form-label" %>
            <%= f.text_field :search, value: params[:search], placeholder: "Name or MAC", class: "kt-input" %>
          </div>
          <div class="flex items-end gap-2">
            <%= f.submit "Apply Filters", class: "kt-btn kt-btn-primary" %>
            <%= link_to "Clear", protected_device_interfaces_path, class: "kt-btn kt-btn-outline" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Device Interfaces List Card -->
    <div class="kt-card">
      <div class="kt-card-header">
        <h3 class="kt-card-title">Device Interfaces (<%= @device_interfaces.count %>)</h3>
      </div>
      <div class="kt-card-content">
        <% if @device_interfaces.any? %>
          <div class="kt-scrollable-x-auto">
            <table class="kt-table kt-table-border">
              <thead>
                <tr>
                  <th>Device</th>
                  <th>Interface Name</th>
                  <th>MAC Address</th>
                  <th>Link Type</th>
                  <th>Networks</th>
                  <th class="w-[100px]">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @device_interfaces.each do |device_interface| %>
                  <tr>
                    <td>
                      <div class="text-sm font-medium text-mono">
                        <%= device_interface.device.label %>
                      </div>
                      <div class="text-sm text-secondary-foreground">
                        <%= device_interface.device.serial_number %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm font-medium text-foreground">
                        <%= device_interface.name %>
                      </div>
                    </td>
                    <td>
                      <div class="text-sm text-mono bg-muted px-2 py-1 rounded">
                        <%= device_interface.mac %>
                      </div>
                    </td>
                    <td>
                      <span class="kt-badge kt-badge-primary">
                        <%= device_interface.link_type&.titleize || 'N/A' %>
                      </span>
                    </td>
                    <td>
                      <div class="text-sm text-foreground">
                        <%= device_interface.networks.count %> networks
                      </div>
                    </td>
                    <td>
                      <div class="flex gap-2">
                        <%= link_to protected_device_interface_path(device_interface), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                          <i class="ki-filled ki-eye"></i>
                        <% end %>
                        <%= link_to edit_protected_device_interface_path(device_interface), class: "kt-btn kt-btn-sm kt-btn-outline" do %>
                          <i class="ki-filled ki-pencil"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="kt-card-footer justify-center">
            <%= pagy_nav(@pagy) %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="flex flex-col items-center gap-4">
              <i class="ki-filled ki-devices text-4xl text-muted-foreground"></i>
              <h3 class="text-lg font-medium text-foreground">No device interfaces</h3>
              <p class="text-sm text-secondary-foreground">Get started by creating a new device interface.</p>
              <%= link_to new_protected_device_interface_path, class: "kt-btn kt-btn-primary" do %>
                <i class="ki-filled ki-plus"></i>
                Add Interface
              <% end %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>