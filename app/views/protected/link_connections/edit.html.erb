<div class="max-w-2xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Edit Link Connection</h1>
          <p class="text-purple-100 mt-1"><%= @link_connection.connection_name %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <%= form_with model: @link_connection, url: protected_link_connection_path(@link_connection), method: :patch, class: "divide-y divide-gray-200" do |f| %>
      <div class="px-6 py-6">
        <div class="space-y-6">
          <!-- Device Interface A Selection -->
          <div>
            <%= f.label :device_interface_a_id, "Device Interface A", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :device_interface_a_id, options_for_select(@device_interfaces.map { |di| ["#{di.device.label} - #{di.name} (#{di.mac})", di.id] }, @link_connection.device_interface_a_id), { include_blank: "Select first interface" }, { required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
            </div>
            <p class="mt-2 text-sm text-gray-500">First endpoint of the connection</p>
            <% if @link_connection.errors[:device_interface_a_id].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:device_interface_a_id].first %></p>
            <% end %>
          </div>

          <!-- Device Interface B Selection -->
          <div>
            <%= f.label :device_interface_b_id, "Device Interface B", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :device_interface_b_id, options_for_select(@device_interfaces.map { |di| ["#{di.device.label} - #{di.name} (#{di.mac})", di.id] }, @link_connection.device_interface_b_id), { include_blank: "Select second interface" }, { required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Second endpoint of the connection</p>
            <% if @link_connection.errors[:device_interface_b_id].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:device_interface_b_id].first %></p>
            <% end %>
          </div>

          <!-- Network Selection -->
          <div>
            <%= f.label :network_id, "Associated Network (Optional)", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :network_id, options_for_select(@networks.map { |n| [n.name, n.id] }, @link_connection.network_id), { include_blank: "No specific network" }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Network this connection belongs to (optional)</p>
            <% if @link_connection.errors[:network_id].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:network_id].first %></p>
            <% end %>
          </div>

          <!-- Link Type -->
          <div>
            <%= f.label :link_type, "Link Type", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :link_type, options_for_select([["Ethernet", "ethernet"], ["Fiber", "fiber"], ["Wireless", "wireless"], ["VPN", "vpn"], ["Serial", "serial"], ["USB", "usb"], ["Bluetooth", "bluetooth"]], @link_connection.link_type), { include_blank: "Select link type" }, { required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
            </div>
            <% if @link_connection.errors[:link_type].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:link_type].first %></p>
            <% end %>
          </div>

          <!-- Status -->
          <div>
            <%= f.label :status, "Connection Status", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :status, options_for_select([["Up", "up"], ["Down", "down"], ["Testing", "testing"], ["Error", "error"], ["Maintenance", "maintenance"]], @link_connection.status), { include_blank: "Select status" }, { required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
            </div>
            <% if @link_connection.errors[:status].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:status].first %></p>
            <% end %>
          </div>

          <!-- Bandwidth -->
          <div>
            <%= f.label :bandwidth_mbps, "Bandwidth (Mbps)", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.number_field :bandwidth_mbps, min: 0, step: 0.1, value: @link_connection.bandwidth_mbps, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "e.g., 1000" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Link bandwidth in Mbps (optional)</p>
            <% if @link_connection.errors[:bandwidth_mbps].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:bandwidth_mbps].first %></p>
            <% end %>
          </div>

          <!-- Latency -->
          <div>
            <%= f.label :latency_ms, "Latency (ms)", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.number_field :latency_ms, min: 0, step: 0.1, value: @link_connection.latency_ms, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "e.g., 1.5" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Average latency in milliseconds (optional)</p>
            <% if @link_connection.errors[:latency_ms].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:latency_ms].first %></p>
            <% end %>
          </div>

          <!-- Metadata -->
          <div>
            <%= f.label :metadata, "Additional Metadata", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_area :metadata, rows: 4, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: '{"cable_id": "CAT6-001", "patch_panel": "PP-A1", "port_a": "1", "port_b": "24"}' %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Optional JSON metadata for cable IDs, ports, etc.</p>
            <% if @link_connection.errors[:metadata].any? %>
              <p class="mt-2 text-sm text-red-600"><%= @link_connection.errors[:metadata].first %></p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="px-6 py-4 bg-gray-50 flex justify-end space-x-3">
        <%= link_to protected_link_connection_path(@link_connection), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          Cancel
        <% end %>
        <%= f.submit "Update Connection", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>