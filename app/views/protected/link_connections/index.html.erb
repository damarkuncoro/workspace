<div class="max-w-7xl mx-auto p-6">
  <!-- Header -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white">Link Connections</h1>
          <p class="text-purple-100 mt-1">Manage direct connections between device interfaces</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to new_protected_link_connection_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-white bg-opacity-20 hover:bg-opacity-30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Connection
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Filters</h3>
    </div>
    <div class="px-6 py-4">
      <%= form_with url: protected_link_connections_path, method: :get, class: "grid grid-cols-1 md:grid-cols-5 gap-4" do |f| %>
        <div>
          <%= f.label :network_id, "Network", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :network_id, options_for_select(@networks.map { |n| [n.name, n.id] }, params[:network_id]), { include_blank: "All Networks" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :link_type, "Link Type", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :link_type, options_for_select([["All Types", ""], ["Ethernet", "ethernet"], ["Fiber", "fiber"], ["Wireless", "wireless"], ["VPN", "vpn"], ["Serial", "serial"], ["USB", "usb"], ["Bluetooth", "bluetooth"]], params[:link_type]), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :status, options_for_select([["All Statuses", ""], ["Up", "up"], ["Down", "down"], ["Testing", "testing"], ["Error", "error"], ["Maintenance", "maintenance"]], params[:status]), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :search, "Search", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :search, value: params[:search], placeholder: "Device or interface name", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div class="flex items-end">
          <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= link_to "Clear", protected_link_connections_path, class: "ml-2 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Link Connections List -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Link Connections (<%= @link_connections.count %>)</h3>
    </div>
    <div class="px-6 py-4">
      <% if @link_connections.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Connection
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Link Type
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Bandwidth
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Latency
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Network
                </th>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @link_connections.each do |link_connection| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                        </svg>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= link_connection.connection_name %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= link_connection.device_interface_a.name %> â†” <%= link_connection.device_interface_b.name %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= link_connection.link_type.titleize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_color = link_connection.status_color %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= status_color %>-100 text-<%= status_color %>-800">
                      <%= link_connection.status.titleize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= link_connection.bandwidth_display %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= link_connection.latency_display %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= link_connection.network&.name || 'N/A' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to protected_link_connection_path(link_connection), class: "text-indigo-600 hover:text-indigo-900 mr-4" do %>
                      View
                    <% end %>
                    <%= link_to edit_protected_link_connection_path(link_connection), class: "text-indigo-600 hover:text-indigo-900" do %>
                      Edit
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="mt-6">
          <%= pagy_nav(@pagy) %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No link connections</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a direct connection between device interfaces.</p>
          <div class="mt-6">
            <%= link_to new_protected_link_connection_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Add Connection
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>